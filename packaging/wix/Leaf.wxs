<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
  <Package
    Name="Leaf"
    Manufacturer="Leaf"
    Version="$(var.MsiVersion)"
    UpgradeCode="e877b79c-a937-404b-98cd-5cfe3bae46fa"
    ProductCode="*"
    InstallerVersion="500"
    Compressed="yes"
    InstallScope="perMachine">
    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <MediaTemplate EmbedCab="yes" />

    <Icon Id="LeafIcon" SourceFile="..\\..\\src\\Leaf\\Assets\\Leaf.ico" />
    <Property Id="ARPPRODUCTICON" Value="LeafIcon" />

    <StandardDirectory Id="ProgramFilesFolder">
      <Directory Id="INSTALLFOLDER" Name="Leaf" />
    </StandardDirectory>

    <StandardDirectory Id="ProgramMenuFolder">
      <Directory Id="LeafStartMenuFolder" Name="Leaf" />
    </StandardDirectory>

    <DirectoryRef Id="INSTALLFOLDER">
      <ComponentGroupRef Id="AppFiles" />
    </DirectoryRef>

    <DirectoryRef Id="LeafStartMenuFolder">
      <Component Id="AppShortcut" Guid="*">
        <Shortcut
          Id="StartMenuShortcut"
          Name="Leaf"
          Target="[INSTALLFOLDER]Leaf.exe"
          WorkingDirectory="INSTALLFOLDER"
          Icon="LeafIcon"
          Advertise="no" />
        <RemoveFolder Id="RemoveLeafStartMenuFolder" Directory="LeafStartMenuFolder" On="uninstall" />
        <RegistryValue Root="HKCU" Key="Software\\Leaf" Name="installed" Type="integer" Value="1" KeyPath="yes" />
      </Component>
    </DirectoryRef>

    <Feature Id="MainFeature" Title="Leaf" Level="1">
      <ComponentGroupRef Id="AppFiles" />
      <ComponentRef Id="AppShortcut" />
    </Feature>
  </Package>

  <Fragment>
    <HarvestDirectory
      Id="Harvested"
      Source="$(var.SourceDir)"
      Directory="INSTALLFOLDER"
      ComponentGroup="AppFiles" />
  </Fragment>
</Wix>
