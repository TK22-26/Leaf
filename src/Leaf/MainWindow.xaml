<Window x:Class="Leaf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Leaf.Views"
        xmlns:converters="clr-namespace:Leaf.Converters"
        xmlns:ic="clr-namespace:FluentIcons.Wpf;assembly=FluentIcons.Wpf"
        mc:Ignorable="d"
        Title="Leaf - Git Repository Manager"
        Icon="Assets/Leaf.png"
        Height="700"
        Width="1200"
        MinWidth="900"
        MinHeight="500"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                Padding="8,4">
            <StackPanel Orientation="Horizontal">
                <Button Content="Clone"
                        Command="{Binding CloneRepositoryCommand}"
                        Padding="12,6"
                        Margin="0,0,4,0"/>
                <Button Content="Add Repo"
                        Command="{Binding AddRepositoryCommand}"
                        Padding="12,6"
                        Margin="0,0,4,0"/>
                <Button Content="Fetch All"
                        Command="{Binding FetchAllCommand}"
                        Padding="12,6"
                        Margin="0,0,4,0"/>
                <Separator Margin="8,0"/>
                <Button Content="Refresh"
                        Command="{Binding RefreshCommand}"
                        Padding="12,6"
                        Margin="0,0,4,0"/>
                <Separator Margin="8,0"/>
                <Button Content="Settings"
                        Command="{Binding OpenSettingsCommand}"
                        Padding="12,6"
                        Margin="0,0,4,0"/>
            </StackPanel>
        </Border>

        <!-- Repository Action Bar -->
        <Border Grid.Row="1"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                Padding="12,6"
                Visibility="{Binding SelectedRepository, Converter={StaticResource NullToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Repository and Branch info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Repository -->
                    <StackPanel Margin="0,0,16,0">
                        <TextBlock Text="Repository"
                                   FontSize="10"
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                        <TextBlock Text="{Binding SelectedRepository.Name}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>
                    <!-- Chevron separator -->
                    <TextBlock Text="&#xE76C;"
                               FontFamily="Segoe Fluent Icons"
                               FontSize="10"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>
                    <!-- Branch -->
                    <StackPanel>
                        <TextBlock Text="Branch"
                                   FontSize="10"
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                        <TextBlock Text="{Binding SelectedRepository.CurrentBranch, FallbackValue='(none)'}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Center: Quick Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Undo -->
                    <Button Command="{Binding UndoCommand}"
                            ToolTip="Undo last commit (before push)"
                            Padding="10,8"
                            Margin="2,0"
                            Background="Transparent"
                            BorderThickness="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7A7;"
                                       FontFamily="Segoe Fluent Icons"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Undo"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="12"/>
                        </StackPanel>
                    </Button>
                    <!-- Redo -->
                    <Button Command="{Binding RedoCommand}"
                            ToolTip="Redo last undone commit"
                            Padding="10,8"
                            Margin="2,0"
                            Background="Transparent"
                            BorderThickness="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7A6;"
                                       FontFamily="Segoe Fluent Icons"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Redo"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="12"/>
                        </StackPanel>
                    </Button>
                    <Rectangle Width="1" Height="28" Fill="{DynamicResource TextFillColorSecondaryBrush}" Margin="8,0" VerticalAlignment="Center"/>
                    <!-- Pull -->
                    <Button Command="{Binding PullCommand}"
                            ToolTip="Pull changes from remote"
                            Padding="10,8"
                            Margin="2,0"
                            Background="Transparent"
                            BorderThickness="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE74B;"
                                       FontFamily="Segoe Fluent Icons"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Pull"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="12"/>
                        </StackPanel>
                    </Button>
                    <!-- Push -->
                    <Button Command="{Binding PushCommand}"
                            ToolTip="Push changes to remote"
                            Padding="10,8"
                            Margin="2,0"
                            Background="Transparent"
                            BorderThickness="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE74A;"
                                       FontFamily="Segoe Fluent Icons"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Push"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="12"/>
                        </StackPanel>
                    </Button>
                    <Rectangle Width="1" Height="28" Fill="{DynamicResource TextFillColorSecondaryBrush}" Margin="8,0" VerticalAlignment="Center"/>
                    <!-- Branch -->
                    <Button Command="{Binding CreateBranchCommand}"
                            ToolTip="Create new branch"
                            Padding="10,8"
                            Margin="2,0"
                            Background="Transparent"
                            BorderThickness="0">
                        <StackPanel Orientation="Horizontal">
                            <ic:SymbolIcon Symbol="BranchFork"
                                           FontSize="14"
                                           VerticalAlignment="Center"/>
                            <TextBlock Text="Branch"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="12"/>
                        </StackPanel>
                    </Button>
                    <Rectangle Width="1" Height="28" Fill="{DynamicResource TextFillColorSecondaryBrush}" Margin="8,0" VerticalAlignment="Center"/>
                    <!-- Stash -->
                    <Button Command="{Binding StashCommand}"
                            ToolTip="Stash changes"
                            Padding="10,8"
                            Margin="2,0"
                            Background="Transparent"
                            BorderThickness="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7B8;"
                                       FontFamily="Segoe Fluent Icons"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Stash"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="12"/>
                        </StackPanel>
                    </Button>
                    <!-- Pop -->
                    <Button Command="{Binding PopStashCommand}"
                            ToolTip="Pop stashed changes"
                            Padding="10,8"
                            Margin="2,0"
                            Background="Transparent"
                            BorderThickness="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7B7;"
                                       FontFamily="Segoe Fluent Icons"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Pop"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="12"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Right: Search (live search, no button needed) -->
                <Grid Grid.Column="2" VerticalAlignment="Center">
                    <TextBox x:Name="CommitSearchBox"
                             Width="200"
                             VerticalContentAlignment="Center"
                             Text="{Binding CommitSearchText, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="Search commits..."
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=CommitSearchBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Grid>
        </Border>

        <!-- Main four-panel layout -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200" MinWidth="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="350" MinWidth="0"/>
            </Grid.ColumnDefinitions>

            <!-- Left panel: Repository list (collapsible) -->
            <Border Grid.Column="0"
                    BorderThickness="0,0,1,0"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}">
                <Grid>
                    <!-- Collapsed state: narrow clickable bar with chevron -->
                    <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                            Cursor="Hand"
                            MouseLeftButtonDown="RepoPane_MouseLeftButtonDown"
                            Width="16"
                            HorizontalAlignment="Left"
                            Visibility="{Binding IsRepoPaneCollapsed, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Border.ToolTip>Click to expand repositories</Border.ToolTip>
                        <TextBlock Text="&#xE76C;"
                                   FontFamily="Segoe Fluent Icons"
                                   FontSize="10"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </Border>
                    <!-- Expanded state: full repo list with collapse button -->
                    <Grid Width="220"
                          Visibility="{Binding IsRepoPaneCollapsed, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <!-- Header with collapse button -->
                        <Border Grid.Row="0"
                                Padding="8,4"
                                BorderThickness="0,0,0,1"
                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}">
                            <Grid>
                                <TextBlock Text="Repositories"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <Button HorizontalAlignment="Right"
                                        Padding="4,2"
                                        Cursor="Hand"
                                        Command="{Binding ToggleRepoPaneCommand}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        ToolTip="Collapse panel">
                                    <TextBlock Text="&#xE76B;"
                                               FontFamily="Segoe Fluent Icons"
                                               FontSize="10"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                </Button>
                            </Grid>
                        </Border>
                        <views:RepositoryListView Grid.Row="1" DataContext="{Binding}"/>
                    </Grid>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1"
                          Width="4"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="Transparent"
                          Visibility="{Binding IsRepoPaneCollapsed, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}"/>

            <!-- Second panel: Branches for selected repo -->
            <Border Grid.Column="2"
                    BorderThickness="0,0,1,0"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}">
                <views:BranchListView DataContext="{Binding}"/>
            </Border>

            <GridSplitter Grid.Column="3"
                          Width="4"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="Transparent"/>

            <!-- Center panel: Git graph + commit list -->
            <views:GitGraphView Grid.Column="4"
                                DataContext="{Binding GitGraphViewModel}"/>

            <GridSplitter Grid.Column="5"
                          Width="4"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="Transparent"
                          Visibility="{Binding IsCommitDetailVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- Right panel: Commit details or Working changes -->
            <Border Grid.Column="6"
                    BorderThickness="1,0,0,0"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    Visibility="{Binding IsCommitDetailVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid>
                    <!-- Commit Detail View (shown when a commit is selected) -->
                    <views:CommitDetailView DataContext="{Binding CommitDetailViewModel}">
                        <views:CommitDetailView.Style>
                            <Style TargetType="views:CommitDetailView">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DataContext.IsWorkingChangesSelected, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </views:CommitDetailView.Style>
                    </views:CommitDetailView>

                    <!-- Working Changes View (shown when working changes are selected) -->
                    <views:WorkingChangesView DataContext="{Binding WorkingChangesViewModel}"
                                               Visibility="{Binding DataContext.IsWorkingChangesSelected, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
