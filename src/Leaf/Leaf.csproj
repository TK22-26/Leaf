<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <ApplicationIcon>Assets\Leaf.ico</ApplicationIcon>
    <!-- Version is overridden by CI/CD pipeline with date-based version (e.g., 2025.01.15.720) -->
    <Version>1.0.0.0</Version>
    <AssemblyVersion>$(Version)</AssemblyVersion>
    <FileVersion>$(Version)</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Leaf.Tests" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\Leaf.png" />
    <Resource Include="Assets\Leaf.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="THIRD_PARTY_LICENSES.txt" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DiffPlex" Version="1.9.0" />
    <PackageReference Include="FluentIcons.Wpf" Version="2.0.316" />
    <PackageReference Include="LibGit2Sharp" Version="0.31.0" />
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
    <PackageReference Include="AvalonEdit" Version="6.3.0.90" />
  </ItemGroup>

</Project>
