<UserControl
    x:Class="Leaf.Views.Settings.AzureDevOpsSettingsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ic="clr-namespace:FluentIcons.Wpf;assembly=FluentIcons.Wpf">

    <StackPanel>
        <TextBlock Text="Azure DevOps"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                   Margin="0,0,0,4" />
        <TextBlock Text="Connect to Azure DevOps for private repository access"
                   FontSize="12"
                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                   Margin="0,0,0,16" />

        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
            <StackPanel>
                <!-- Configured Credentials List -->
                <TextBlock Text="Configured Organizations"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                           Margin="0,0,0,12" />

                <ItemsControl x:Name="CredentialsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="12"
                                    Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <ic:SymbolIcon Symbol="Organization" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center" />

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                        <TextBlock Text="Personal Access Token"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>

                                    <Button Grid.Column="2"
                                            Padding="8,4"
                                            Click="RemoveCredential_Click"
                                            Tag="{Binding}"
                                            Content="Remove" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty state -->
                <TextBlock x:Name="EmptyStateText"
                           Text="No Azure DevOps organizations configured"
                           FontSize="12"
                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                           Margin="0,0,0,12"
                           Visibility="Collapsed" />

                <!-- Add Organization Button -->
                <Button x:Name="AddCredentialButton"
                        Padding="12,8"
                        Click="AddCredential_Click"
                        Margin="0,4,0,0"
                        HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <ic:SymbolIcon Symbol="Add" FontSize="14" Margin="0,0,6,0" />
                        <TextBlock Text="Add Organization" />
                    </StackPanel>
                </Button>

                <!-- Add Credential Form (initially collapsed) -->
                <Border x:Name="AddCredentialForm"
                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="12"
                        Margin="0,12,0,0"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Add Azure DevOps Organization"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,12" />

                        <!-- Organization -->
                        <TextBlock Text="Organization"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBox x:Name="OrganizationTextBox"
                                 Margin="0,0,0,4"
                                 Padding="8,6" />
                        <TextBlock Text="Your Azure DevOps organization name (e.g., 'mycompany' from dev.azure.com/mycompany)"
                                   FontSize="11"
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                   Margin="0,0,0,12"
                                   TextWrapping="Wrap" />

                        <!-- PAT -->
                        <TextBlock Text="Personal Access Token"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Needs 'Code (Read)' scope for cloning/fetching, or 'Code (Read &amp; Write)' for pushing."
                                   FontSize="11"
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                   Margin="0,0,0,8"
                                   TextWrapping="Wrap" />
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <PasswordBox x:Name="PatPasswordBox"
                                         Grid.Column="0"
                                         Padding="8,6"
                                         PasswordChanged="PatPasswordBox_PasswordChanged" />
                            <Button x:Name="TogglePatVisibilityButton"
                                    Grid.Column="1"
                                    Width="60"
                                    Margin="8,0,0,0"
                                    Click="TogglePatVisibility_Click"
                                    Content="Show" />
                        </Grid>
                        <TextBox x:Name="PatTextBox"
                                 Margin="0,0,0,12"
                                 Padding="8,6"
                                 TextChanged="PatTextBox_TextChanged"
                                 Visibility="Collapsed" />

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="SaveCredentialButton"
                                    Padding="12,6"
                                    Click="SaveCredential_Click"
                                    Content="Save" />
                            <Button x:Name="CancelAddButton"
                                    Padding="12,6"
                                    Margin="8,0,0,0"
                                    Click="CancelAdd_Click"
                                    Content="Cancel" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
