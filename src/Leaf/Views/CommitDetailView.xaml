<UserControl
    x:Class="Leaf.Views.CommitDetailView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Leaf.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <converters:FileStatusToBrushConverter x:Key="FileStatusToBrushConverter" />
        <converters:IdenticonConverter x:Key="IdenticonConverter" />

        <!--  File status colors  -->
        <SolidColorBrush x:Key="StatusAddedBrush" Color="#28A745" />
        <SolidColorBrush x:Key="StatusModifiedBrush" Color="#F5A623" />
        <SolidColorBrush x:Key="StatusDeletedBrush" Color="#E81123" />

        <!--  Working changes banner - dark green for dark theme  -->
        <SolidColorBrush x:Key="WorkingChangesBannerBrush" Color="#2D5A3D" />
    </UserControl.Resources>

    <Grid>
        <!--  No commit selected message  -->
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
            Text="Select a commit to view details">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Commit}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <!--  Commit details  -->
        <Grid Visibility="{Binding Commit, Converter={StaticResource NullToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <!--  Working Changes Banner  -->
                <RowDefinition Height="Auto" />
                <!--  Commit SHA Banner  -->
                <RowDefinition Height="Auto" />
                <!--  Commit Message Box  -->
                <RowDefinition Height="Auto" />
                <!--  Author/Parent Info  -->
                <RowDefinition Height="Auto" />
                <!--  File Summary Bar  -->
                <RowDefinition Height="Auto" />
                <!--  File List  -->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Working Changes Banner (when working changes exist)  -->
            <Border
                Grid.Row="0"
                Height="30"
                Padding="6"
                Background="{StaticResource WorkingChangesBannerBrush}"
                Visibility="{Binding HasWorkingChanges, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                <Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="13"
                        Foreground="#A8D5A2">
                        <Run Text="{Binding WorkingChangesCount, FallbackValue=0, Mode=OneWay}" /><Run Text=" file changes in working directory" />
                    </TextBlock>

                    <Button
                        Margin="0,0,2,0"
                        Padding="8,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="#3D7A4D"
                        BorderThickness="0"
                        Click="WorkingChangesBanner_Click"
                        Content="View"
                        FontSize="11"
                        Foreground="White" />
                </Grid>
            </Border>

            <!--  Commit SHA Banner  -->
            <Border
                Grid.Row="1"
                Height="20"
                Padding="2"
                Background="{DynamicResource ControlFillColorTertiaryBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="0,0,0,1">
                <Grid>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            FontSize="13"
                            Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                            Text="commit: " />
                        <TextBlock
                            Cursor="Hand"
                            FontFamily="Consolas"
                            FontSize="13"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            MouseLeftButtonDown="CommitSha_Click"
                            Text="{Binding Commit.ShortSha, Mode=OneWay}"
                            TextDecorations="Underline"
                            ToolTip="Click to copy full SHA"
                            ToolTipService.InitialShowDelay="50" />
                    </StackPanel>
                    <Popup
                        x:Name="CopiedPopup"
                        AllowsTransparency="True"
                        IsOpen="False"
                        Placement="Center"
                        PopupAnimation="Fade">
                        <Border
                            Padding="8,4"
                            Background="#2D2D2D"
                            BorderBrush="#404040"
                            BorderThickness="1"
                            CornerRadius="4">
                            <TextBlock
                                FontSize="12"
                                Foreground="White"
                                Text="Copied!" />
                        </Border>
                    </Popup>
                </Grid>
            </Border>

            <!--  Commit Message Box  -->
            <Border
                Grid.Row="2"
                Height="200"
                Margin="8"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="6">
                <ScrollViewer
                    Padding="16,14"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!--  Commit Subject (first line)  -->
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="{Binding Commit.MessageShort}"
                            TextWrapping="Wrap" />

                        <!--  Commit Description (body)  -->
                        <TextBlock
                            Margin="0,8,0,0"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{Binding Commit.Description}"
                            TextWrapping="Wrap">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Commit.Description}" Value="">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!--  Author/Parent Info Section  -->
            <Border
                Grid.Row="3"
                Margin="8,0,8,8"
                Padding="8"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Author Name  -->
                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Image
                            Width="18"
                            Height="18"
                            Margin="0,0,8,0"
                            Source="{Binding Commit.AvatarKey, Converter={StaticResource IdenticonConverter}, ConverterParameter=18}">
                            <Image.Clip>
                                <EllipseGeometry
                                    Center="9,9"
                                    RadiusX="9"
                                    RadiusY="9" />
                            </Image.Clip>
                        </Image>
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="{Binding Commit.Author}" />
                    </StackPanel>

                    <!--  Parent SHA (clickable)  -->
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        FontSize="10"
                        MouseLeftButtonDown="ParentSha_Click"
                        ToolTip="Click to navigate to parent commit"
                        Visibility="{Binding HasParent, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                        <Run Foreground="{DynamicResource TextFillColorTertiaryBrush}" Text="parent: " /><Run
                            FontFamily="Consolas"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{Binding ParentShortSha, Mode=OneWay}"
                            TextDecorations="Underline" />
                    </TextBlock>

                    <!--  Authored Date  -->
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,2,0,0"
                        FontSize="10"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                        <Run Text="authored " />
                        <Run Text="{Binding Commit.Date, StringFormat='{}{0:MM/dd/yyyy}', Mode=OneWay}" />
                        <Run Text=" @ " />
                        <Run Text="{Binding Commit.Date, StringFormat='{}{0:h:mm tt}', Mode=OneWay}" />
                    </TextBlock>
                </Grid>
            </Border>

            <!--  File Summary Bar  -->
            <Border
                Grid.Row="4"
                Margin="8,0,8,0"
                Padding="8"
                Background="{DynamicResource ControlFillColorSecondaryBrush}"
                BorderBrush="{DynamicResource LeafAccentSubtleBrush}"
                BorderThickness="0,0,0,1"
                CornerRadius="6,6,0,0">
                <StackPanel Orientation="Horizontal">
                    <!--  Modified count  -->
                    <StackPanel
                        Margin="0,0,16,0"
                        Orientation="Horizontal"
                        Visibility="{Binding ModifiedCount, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock
                            Margin="0,0,6,0"
                            VerticalAlignment="Center"
                            FontFamily="Segoe Fluent Icons"
                            FontSize="12"
                            Foreground="{StaticResource StatusModifiedBrush}"
                            Text="&#xE70F;" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{Binding ModifiedCount}" />
                    </StackPanel>

                    <!--  Added count  -->
                    <StackPanel
                        Margin="0,0,16,0"
                        Orientation="Horizontal"
                        Visibility="{Binding AddedCount, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock
                            Margin="0,0,6,0"
                            VerticalAlignment="Center"
                            FontFamily="Consolas"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="{StaticResource StatusAddedBrush}"
                            Text="+" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{Binding AddedCount}" />
                    </StackPanel>

                    <!--  Deleted count  -->
                    <StackPanel Orientation="Horizontal" Visibility="{Binding DeletedCount, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock
                            Margin="0,0,6,0"
                            VerticalAlignment="Center"
                            FontFamily="Consolas"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="{StaticResource StatusDeletedBrush}"
                            Text="-" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{Binding DeletedCount}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--  File changes list  -->
            <Border
                Grid.Row="5"
                Margin="8,0,8,8"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1,0,1,1"
                CornerRadius="0,0,6,6">
                <ScrollViewer
                    Padding="8"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding FileChanges}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    x:Name="ItemBorder"
                                    Margin="4,2"
                                    Padding="8,6"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="2,0,0,0"
                                    CornerRadius="4"
                                    ToolTip="{Binding Path}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="24" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!--  Status icon  -->
                                        <TextBlock
                                            Grid.RowSpan="2"
                                            Grid.Column="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="12">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="&#xE70F;" />
                                                    <Setter Property="FontFamily" Value="Segoe Fluent Icons" />
                                                    <Setter Property="Foreground" Value="{StaticResource StatusModifiedBrush}" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Added">
                                                            <Setter Property="Text" Value="+" />
                                                            <Setter Property="FontFamily" Value="Consolas" />
                                                            <Setter Property="FontWeight" Value="Bold" />
                                                            <Setter Property="FontSize" Value="16" />
                                                            <Setter Property="Foreground" Value="{StaticResource StatusAddedBrush}" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Deleted">
                                                            <Setter Property="Text" Value="-" />
                                                            <Setter Property="FontFamily" Value="Consolas" />
                                                            <Setter Property="FontWeight" Value="Bold" />
                                                            <Setter Property="FontSize" Value="16" />
                                                            <Setter Property="Foreground" Value="{StaticResource StatusDeletedBrush}" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!--  File name (prominent)  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            FontSize="13"
                                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                            Text="{Binding FileName}"
                                            TextTrimming="CharacterEllipsis" />

                                        <!--  Directory path (secondary, smaller)  -->
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            FontSize="11"
                                            Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                            Text="{Binding Directory}"
                                            TextTrimming="CharacterEllipsis">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Directory}" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                                <DataTemplate.Triggers>
                                    <Trigger SourceName="ItemBorder" Property="IsMouseOver" Value="True">
                                        <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource LeafAccentHoverBrush}" />
                                        <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#28A745" />
                                    </Trigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
