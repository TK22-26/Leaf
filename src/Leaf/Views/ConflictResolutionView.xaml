<Window x:Class="Leaf.Views.ConflictResolutionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:Leaf.ViewModels"
        xmlns:models="clr-namespace:Leaf.Models"
        xmlns:controls="clr-namespace:Leaf.Controls"
        xmlns:ic="clr-namespace:FluentIcons.Wpf;assembly=FluentIcons.Wpf"
        xmlns:converters="clr-namespace:Leaf.Converters"
        d:DataContext="{d:DesignInstance Type=viewmodels:ConflictResolutionViewModel}"
        mc:Ignorable="d"
        Title="Resolve Merge Conflicts"
        Height="700"
        Width="1200"
        MinHeight="500"
        MinWidth="800"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="CanResize">

    <Window.InputBindings>
        <KeyBinding Key="Up" Modifiers="Alt" Command="{Binding PreviousRegionConflictCommand}"/>
        <KeyBinding Key="Down" Modifiers="Alt" Command="{Binding NextRegionConflictCommand}"/>
        <KeyBinding Key="D1" Modifiers="Alt" Command="{Binding AcceptAllOursCommand}"/>
        <KeyBinding Key="D2" Modifiers="Alt" Command="{Binding AcceptAllTheirsCommand}"/>
        <KeyBinding Key="Enter" Modifiers="Ctrl" Command="{Binding MarkResolvedCommand}"/>
    </Window.InputBindings>

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>

        <Style x:Key="LineCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Width" Value="14"/>
            <Setter Property="Height" Value="14"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Visibility" Value="Hidden"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelectable}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DisplayLineBorderStyleOurs" TargetType="Border">
            <Setter Property="Padding" Value="0,1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelectable}" Value="True">
                    <Setter Property="Background" Value="#331E3A5F"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="#B31E3A5F"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#661E3A5F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DisplayLineBorderStyleTheirs" TargetType="Border">
            <Setter Property="Padding" Value="0,1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelectable}" Value="True">
                    <Setter Property="Background" Value="#3314532D"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="#B314532D"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6614532D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Conflict file tab style -->
        <Style x:Key="ConflictTabStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border"
                                Background="{DynamicResource ControlFillColorDefaultBrush}"
                                CornerRadius="4,4,0,0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ResolveHeaderActionButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="Height" Value="28"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Branch info and conflict count -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <ic:SymbolIcon Symbol="Warning" FontSize="20" Foreground="#F59E0B" Margin="0,0,8,0"/>
                    <TextBlock Text="Merge Conflicts -" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <ic:SymbolIcon Symbol="BranchFork" FontSize="14" Margin="8,0,4,0" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="{Binding SourceBranch}" VerticalAlignment="Center"/>
                    <TextBlock Text=" into " Foreground="{DynamicResource TextFillColorSecondaryBrush}" VerticalAlignment="Center"/>
                    <ic:SymbolIcon Symbol="BranchFork" FontSize="14" Margin="0,0,4,0" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="{Binding TargetBranch}" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main content area with file list on left -->
        <Grid Grid.Row="1" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" MinWidth="150" MaxWidth="350"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- File list (left sidebar) -->
            <Border Grid.Column="0"
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- File list header -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource ControlFillColorSecondaryBrush}"
                            Padding="12,8"
                            CornerRadius="4,4,0,0">
                        <StackPanel Orientation="Horizontal">
                            <ic:SymbolIcon Symbol="DocumentMultiple" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Conflicting Files" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding TotalCount, StringFormat=' ({0})'}"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- File list -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Conflicts}"
                             SelectedItem="{Binding SelectedConflict}"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="4"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="8,6"/>
                                <Setter Property="Margin" Value="2"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="ContextMenu">
                                    <Setter.Value>
                                        <ContextMenu DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}">
                                            <MenuItem Header="Move to Conflicted"
                                                      Command="{Binding UnresolveConflictCommand}"
                                                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                      IsEnabled="{Binding PlacementTarget.DataContext.IsResolved, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                        </ContextMenu>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Border"
                                                    Background="Transparent"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource ControlFillColorTertiaryBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Status icon -->
                                    <ic:SymbolIcon Grid.Column="0"
                                                   FontSize="14"
                                                   Margin="0,0,8,0"
                                                   VerticalAlignment="Center">
                                        <ic:SymbolIcon.Style>
                                            <Style TargetType="ic:SymbolIcon">
                                                <Setter Property="Symbol" Value="Warning"/>
                                                <Setter Property="Foreground" Value="#F59E0B"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsResolved}" Value="True">
                                                        <Setter Property="Symbol" Value="CheckmarkCircle"/>
                                                        <Setter Property="Foreground" Value="#10B981"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ic:SymbolIcon.Style>
                                    </ic:SymbolIcon>

                                    <!-- File name -->
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding FileName}"
                                               TextTrimming="CharacterEllipsis"
                                               ToolTip="{Binding FilePath}"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1"
                          Width="8"
                          HorizontalAlignment="Stretch"
                          Background="Transparent"/>

            <!-- Merge View (right side) -->
            <Border Grid.Column="2"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header with actions -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource ControlFillColorDefaultBrush}"
                            Padding="12,8"
                            CornerRadius="2,2,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Resolve Conflicts"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Conflict counter -->
                            <Border Grid.Column="1"
                                    Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                    CornerRadius="4"
                                    Height="28"
                                    Padding="10,0"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding RemainingCount, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Grid VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ic:SymbolIcon Grid.Column="0"
                                                   Symbol="Warning"
                                                   FontSize="12"
                                                   Foreground="#F59E0B"
                                                   Margin="0,0,4,0"
                                                   VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                               VerticalAlignment="Center"
                                               Text="{Binding RemainingCount, Mode=OneWay}"/>
                                    <TextBlock Grid.Column="2"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                               VerticalAlignment="Center"
                                               Margin="4,0,0,0"
                                               Text="unresolved"/>
                                </Grid>
                            </Border>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Command="{Binding AcceptAllOursCommand}"
                                        Style="{StaticResource ResolveHeaderActionButtonStyle}"
                                        Background="#1E3A5F"
                                        Foreground="#BFDBFE"
                                        BorderBrush="#60A5FA"
                                        Margin="0,0,4,0"
                                        ToolTip="Accept all from current branch">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <ic:SymbolIcon Symbol="Checkmark" FontSize="12" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="All Ours" FontSize="11" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding AcceptAllTheirsCommand}"
                                        Style="{StaticResource ResolveHeaderActionButtonStyle}"
                                        Background="#14532D"
                                        Foreground="#BBF7D0"
                                        BorderBrush="#4ADE80"
                                        ToolTip="Accept all from incoming branch">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <ic:SymbolIcon Symbol="Checkmark" FontSize="12" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="All Theirs" FontSize="11" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="1" Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Ours -->
                        <Border Grid.Row="0" Grid.Column="0"
                                BorderThickness="1"
                                BorderBrush="#1E3A5F"
                                CornerRadius="4"
                                Background="#1A1E3A5F"
                                Margin="0,0,8,8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Background="#1E3A5F" Padding="8,4">
                                    <TextBlock Text="OURS (current branch)" FontSize="11" Foreground="#BFDBFE"/>
                                </Border>
                                <ScrollViewer x:Name="OursScrollViewer"
                                              Grid.Row="1"
                                              VerticalScrollBarVisibility="Auto"
                                              HorizontalScrollBarVisibility="Auto">
                                    <StackPanel>
                                        <ItemsControl x:Name="OursRegionList"
                                                      ItemsSource="{Binding CurrentMergeResult.Regions}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate DataType="{x:Type models:MergeRegion}">
                                                    <Border Margin="0,0,0,6">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsConflict}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Grid.Column="0"
                                                                       Text="{Binding Index, StringFormat='Conflict #{0}'}"
                                                                       FontSize="11"
                                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                                            <Button Grid.Column="1"
                                                                    Command="{Binding DataContext.TakeOursHunkCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding}"
                                                                    Padding="6,2"
                                                                    ToolTip="Take this hunk from ours">
                                                                <TextBlock Text="Take hunk" FontSize="11"/>
                                                            </Button>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        <ItemsControl ItemsSource="{Binding OursDisplayLines}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate DataType="{x:Type models:ConflictDisplayLine}">
                                                    <Border Style="{StaticResource DisplayLineBorderStyleOurs}">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="36"/>
                                                                <ColumnDefinition Width="22"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Grid.Column="0"
                                                                       Text="{Binding LineNumber}"
                                                                       FontFamily="Consolas"
                                                                       FontSize="11"
                                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                                       HorizontalAlignment="Right"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,6,0"/>
                                                            <CheckBox Grid.Column="1"
                                                                      Style="{StaticResource LineCheckBoxStyle}"
                                                                      IsChecked="{Binding IsSelected}"/>
                                                            <TextBlock Grid.Column="2"
                                                                       Text="{Binding Content}"
                                                                       FontFamily="Consolas"
                                                                       FontSize="12"
                                                                       TextWrapping="NoWrap"
                                                                       VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!-- Theirs -->
                        <Border Grid.Row="0" Grid.Column="1"
                                BorderThickness="1"
                                BorderBrush="#14532D"
                                CornerRadius="4"
                                Background="#1A14532D"
                                Margin="0,0,0,8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Background="#14532D" Padding="8,4">
                                    <TextBlock Text="THEIRS (incoming)" FontSize="11" Foreground="#BBF7D0"/>
                                </Border>
                                <ScrollViewer x:Name="TheirsScrollViewer"
                                              Grid.Row="1"
                                              VerticalScrollBarVisibility="Auto"
                                              HorizontalScrollBarVisibility="Auto">
                                    <StackPanel>
                                        <ItemsControl x:Name="TheirsRegionList"
                                                      ItemsSource="{Binding CurrentMergeResult.Regions}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate DataType="{x:Type models:MergeRegion}">
                                                    <Border Margin="0,0,0,6">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsConflict}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Grid.Column="0"
                                                                       Text="{Binding Index, StringFormat='Conflict #{0}'}"
                                                                       FontSize="11"
                                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                                            <Button Grid.Column="1"
                                                                    Command="{Binding DataContext.TakeTheirsHunkCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding}"
                                                                    Padding="6,2"
                                                                    ToolTip="Take this hunk from theirs">
                                                                <TextBlock Text="Take hunk" FontSize="11"/>
                                                            </Button>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        <ItemsControl ItemsSource="{Binding TheirsDisplayLines}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate DataType="{x:Type models:ConflictDisplayLine}">
                                                    <Border Style="{StaticResource DisplayLineBorderStyleTheirs}">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="36"/>
                                                                <ColumnDefinition Width="22"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Grid.Column="0"
                                                                       Text="{Binding LineNumber}"
                                                                       FontFamily="Consolas"
                                                                       FontSize="11"
                                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                                       HorizontalAlignment="Right"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,6,0"/>
                                                            <CheckBox Grid.Column="1"
                                                                      Style="{StaticResource LineCheckBoxStyle}"
                                                                      IsChecked="{Binding IsSelected}"/>
                                                            <TextBlock Grid.Column="2"
                                                                       Text="{Binding Content}"
                                                                       FontFamily="Consolas"
                                                                       FontSize="12"
                                                                       TextWrapping="NoWrap"
                                                                       VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!-- Merged Result -->
                        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                BorderThickness="1"
                                BorderBrush="#B45309"
                                Background="#1AB45309"
                                CornerRadius="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Background="#B45309" Padding="8,4">
                                    <TextBlock Text="MERGED RESULT" FontSize="11" Foreground="#FEF3C7"/>
                                </Border>
                                <controls:MergedResultEditorControl Grid.Row="1"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Footer with Mark Resolved and Copy buttons -->
                    <Border Grid.Row="2" Padding="8" Background="{DynamicResource ControlFillColorDefaultBrush}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Copy merged result button -->
                            <Button Grid.Column="0"
                                    Command="{Binding CopyMergedResultCommand}"
                                    Padding="12,6"
                                    ToolTip="Copy full merged result to clipboard">
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Copy" FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="Copy Result"/>
                                </StackPanel>
                            </Button>

                            <!-- Mark resolved button -->
                            <Button Grid.Column="2"
                                    Command="{Binding MarkResolvedCommand}"
                                    Padding="16,6"
                                    IsEnabled="{Binding CanMarkResolved}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                        <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CanMarkResolved}" Value="True">
                                                <Setter Property="Background" Value="#22C55E"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="CheckmarkCircle" FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="Mark as Resolved"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer with Done button -->
        <Border Grid.Row="2"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                        Padding="20,10"
                        Click="OnDoneClick">
                    <StackPanel Orientation="Horizontal">
                        <ic:SymbolIcon Symbol="Checkmark" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Done" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Loading overlay -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                <TextBlock Text="Loading conflicts..."
                           Margin="0,12,0,0"
                           HorizontalAlignment="Center"
                           Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
