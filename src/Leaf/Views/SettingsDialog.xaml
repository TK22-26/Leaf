<Window
    x:Class="Leaf.Views.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Settings"
    Width="550"
    Height="480"
    MinWidth="450"
    MinHeight="400"
    ResizeMode="CanResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,20"
            FontSize="20"
            FontWeight="SemiBold"
            Text="Settings" />

        <!--  Settings Content  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="170" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Left navigation  -->
            <ListBox
                x:Name="SettingsNav"
                Grid.Column="0"
                Padding="0,4,12,0"
                BorderThickness="0"
                SelectedIndex="0">
                <ListBoxItem Content="Authentication" />
                <ListBoxItem Content="Clone Path" />
                <ListBoxItem Content="AI Integrations" />
            </ListBox>

            <!--  Right content: Authentication  -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <ScrollViewer.Style>
                    <Style TargetType="ScrollViewer">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedIndex, ElementName=SettingsNav}" Value="0">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ScrollViewer.Style>
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Text="Authentication" />

                    <!--  Azure DevOps  -->
                    <Border
                        Margin="0,0,0,12"
                        Padding="12"
                        BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                        BorderThickness="1"
                        CornerRadius="4">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Text="Azure DevOps" />
                                <TextBlock
                                    x:Name="PatStatusText"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    FontSize="11" />
                            </Grid>

                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Border
                                    Width="36"
                                    Height="36"
                                    Margin="0,0,10,0"
                                    BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                                    BorderThickness="1"
                                    CornerRadius="6">
                                    <Image Source="{Binding Text, ElementName=OrganizationTextBox, Converter={StaticResource IdenticonConverter}}" Stretch="UniformToFill" />
                                </Border>
                                <StackPanel Grid.Column="1">
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                        Text="Organization" />
                                    <TextBlock FontWeight="SemiBold" Text="{Binding Text, ElementName=OrganizationTextBox}" />
                                </StackPanel>
                            </Grid>

                            <TextBlock
                                Margin="0,0,0,4"
                                Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                Text="Organization" />
                            <TextBox
                                x:Name="OrganizationTextBox"
                                Margin="0,0,0,4"
                                Padding="8,6" />
                            <TextBlock
                                Margin="0,0,0,12"
                                FontSize="11"
                                Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                Text="Your Azure DevOps organization name (e.g., 'mycompany' from dev.azure.com/mycompany)"
                                TextWrapping="Wrap" />

                            <TextBlock
                                Margin="0,0,0,4"
                                Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                Text="Personal Access Token (PAT)" />
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="11"
                                Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                Text="Used for cloning and fetching from private Azure DevOps repositories. Needs 'Code (Read)' scope."
                                TextWrapping="Wrap" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <PasswordBox
                                    x:Name="PatPasswordBox"
                                    Grid.Column="0"
                                    Padding="8,6"
                                    PasswordChanged="PatPasswordBox_PasswordChanged" />
                                <Button
                                    x:Name="TogglePatVisibilityButton"
                                    Grid.Column="1"
                                    Width="60"
                                    Margin="8,0,0,0"
                                    Click="TogglePatVisibility_Click"
                                    Content="Show" />
                            </Grid>

                            <TextBox
                                x:Name="PatTextBox"
                                Margin="0,8,0,0"
                                Padding="8,6"
                                TextChanged="PatTextBox_TextChanged"
                                Visibility="Collapsed" />

                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <Button
                                    x:Name="SavePatButton"
                                    Padding="12,6"
                                    Click="SavePat_Click"
                                    Content="Connect" />
                                <Button
                                    x:Name="ClearPatButton"
                                    Margin="8,0,0,0"
                                    Padding="12,6"
                                    Click="ClearPat_Click"
                                    Content="Disconnect" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  GitHub  -->
                    <Border
                        Padding="12"
                        BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                        BorderThickness="1"
                        CornerRadius="4">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Text="GitHub" />
                                <TextBlock
                                    x:Name="GitHubStatusText"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                    Text="Not connected" />
                            </Grid>

                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Border
                                    Width="36"
                                    Height="36"
                                    Margin="0,0,10,0"
                                    BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                                    BorderThickness="1"
                                    CornerRadius="6">
                                    <Image Source="{Binding Text, ElementName=GitHubUsernameTextBox, Converter={StaticResource IdenticonConverter}}" Stretch="UniformToFill" />
                                </Border>
                                <StackPanel Grid.Column="1">
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                        Text="Username" />
                                    <TextBlock FontWeight="SemiBold" Text="{Binding Text, ElementName=GitHubUsernameTextBox}" />
                                </StackPanel>
                            </Grid>

                            <TextBlock
                                Margin="0,0,0,4"
                                Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                Text="Username or Email" />
                            <TextBox
                                x:Name="GitHubUsernameTextBox"
                                Margin="0,0,0,4"
                                Padding="8,6" />
                            <TextBlock
                                Margin="0,0,0,4"
                                Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                Text="Personal Access Token (PAT)" />
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <PasswordBox
                                    x:Name="GitHubPatPasswordBox"
                                    Grid.Column="0"
                                    Padding="8,6"
                                    PasswordChanged="GitHubPatPasswordBox_PasswordChanged" />
                                <Button
                                    x:Name="ToggleGitHubPatVisibilityButton"
                                    Grid.Column="1"
                                    Width="60"
                                    Margin="8,0,0,0"
                                    Click="ToggleGitHubPatVisibility_Click"
                                    Content="Show" />
                            </Grid>

                            <TextBox
                                x:Name="GitHubPatTextBox"
                                Margin="0,0,0,8"
                                Padding="8,6"
                                TextChanged="GitHubPatTextBox_TextChanged"
                                Visibility="Collapsed" />

                            <StackPanel Orientation="Horizontal">
                                <Button
                                    x:Name="SaveGitHubPatButton"
                                    Padding="12,6"
                                    Click="SaveGitHubPat_Click"
                                    Content="Connect" />
                                <Button
                                    x:Name="ClearGitHubPatButton"
                                    Margin="8,0,0,0"
                                    Padding="12,6"
                                    Click="ClearGitHubPat_Click"
                                    Content="Disconnect" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!--  Right content: Clone Path  -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <ScrollViewer.Style>
                    <Style TargetType="ScrollViewer">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedIndex, ElementName=SettingsNav}" Value="1">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ScrollViewer.Style>
                <Border
                    Padding="16"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                    BorderThickness="1"
                    CornerRadius="4">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,12"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="Default Clone Path" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox
                                x:Name="ClonePathTextBox"
                                Grid.Column="0"
                                Padding="8,6" />
                            <Button
                                Grid.Column="1"
                                Margin="8,0,0,0"
                                Padding="12,6"
                                Click="BrowseClonePath_Click"
                                Content="Browse..." />
                        </Grid>
                    </StackPanel>
                </Border>
            </ScrollViewer>

            <!--  Right content: AI Integrations  -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <ScrollViewer.Style>
                    <Style TargetType="ScrollViewer">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedIndex, ElementName=SettingsNav}" Value="2">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ScrollViewer.Style>
                <Border
                    Padding="16"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                    BorderThickness="1"
                    CornerRadius="4">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,12"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="AI Integrations" />

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="11"
                                Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                Text="Default AI" />
                            <ComboBox
                                x:Name="AiDefaultComboBox"
                                Grid.Column="1"
                                Margin="8,0,0,0"
                                MinWidth="140"
                                SelectionChanged="AiDefaultComboBox_SelectionChanged" />
                        </Grid>

                        <TextBlock
                            Margin="0,0,0,12"
                            FontSize="11"
                            Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                            Text="Connect a local CLI to enable AI features." />

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="11"
                                Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                Text="CLI timeout (s)" />
                            <TextBox
                                x:Name="AiTimeoutTextBox"
                                Grid.Column="1"
                                Margin="8,0,0,0"
                                Padding="6,4"
                                VerticalContentAlignment="Center"
                                Width="80"
                                HorizontalAlignment="Right" />
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock FontWeight="SemiBold" Text="Claude" />
                                <TextBlock
                                    x:Name="ClaudeStatusText"
                                    FontSize="11"
                                    Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                    Text="Not connected" />
                            </StackPanel>
                            <Button
                                x:Name="ClaudeConnectButton"
                                Grid.Column="1"
                                Padding="12,6"
                                Click="ClaudeConnect_Click"
                                Content="Connect" />
                            <Button
                                x:Name="ClaudeDisconnectButton"
                                Grid.Column="2"
                                Margin="8,0,0,0"
                                Padding="12,6"
                                Click="ClaudeDisconnect_Click"
                                Content="Disconnect"
                                IsEnabled="False" />
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock FontWeight="SemiBold" Text="Gemini" />
                                <TextBlock
                                    x:Name="GeminiStatusText"
                                    FontSize="11"
                                    Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                    Text="Not connected" />
                            </StackPanel>
                            <Button
                                x:Name="GeminiConnectButton"
                                Grid.Column="1"
                                Padding="12,6"
                                Click="GeminiConnect_Click"
                                Content="Connect" />
                            <Button
                                x:Name="GeminiDisconnectButton"
                                Grid.Column="2"
                                Margin="8,0,0,0"
                                Padding="12,6"
                                Click="GeminiDisconnect_Click"
                                Content="Disconnect"
                                IsEnabled="False" />
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock FontWeight="SemiBold" Text="Codex" />
                                <TextBlock
                                    x:Name="CodexStatusText"
                                    FontSize="11"
                                    Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                    Text="Not connected" />
                            </StackPanel>
                            <Button
                                x:Name="CodexConnectButton"
                                Grid.Column="1"
                                Padding="12,6"
                                Click="CodexConnect_Click"
                                Content="Connect" />
                            <Button
                                x:Name="CodexDisconnectButton"
                                Grid.Column="2"
                                Margin="8,0,0,0"
                                Padding="12,6"
                                Click="CodexDisconnect_Click"
                                Content="Disconnect"
                                IsEnabled="False" />
                        </Grid>
                    </StackPanel>
                </Border>
            </ScrollViewer>
        </Grid>

        <!--  Footer buttons  -->
        <StackPanel
            Grid.Row="2"
            Margin="0,20,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Padding="16,8"
                Click="Close_Click"
                Content="Close"
                IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
