<Window
    x:Class="Leaf.Views.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ic="clr-namespace:FluentIcons.Wpf;assembly=FluentIcons.Wpf"
    Title="Settings"
    Width="750"
    Height="550"
    MinWidth="650"
    MinHeight="450"
    Background="{DynamicResource ApplicationBackgroundBrush}"
    ResizeMode="CanResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <!-- Setting item model for TreeView -->
        <Style x:Key="SettingsNavTreeViewItem" TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
            <Setter Property="IsExpanded" Value="True" />
            <Setter Property="Padding" Value="4,6" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left Navigation Panel -->
        <Border Grid.Column="0"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Text="Settings"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                           Margin="16,16,16,8" />

                <!-- Search Box -->
                <Grid Grid.Row="1" Margin="12,4,12,12">
                    <TextBox x:Name="SearchBox"
                             Padding="28,6,8,6"
                             TextChanged="SearchBox_TextChanged" />
                    <ic:SymbolIcon Symbol="Search"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"
                                   IsHitTestVisible="False" />
                    <TextBlock Text="Search settings..."
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                               VerticalAlignment="Center"
                               Margin="30,0,0,0"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Navigation TreeView -->
                <TreeView x:Name="SettingsNavTree"
                          Grid.Row="2"
                          BorderThickness="0"
                          Background="Transparent"
                          Padding="8,0"
                          SelectedItemChanged="SettingsNavTree_SelectedItemChanged"
                          ItemContainerStyle="{StaticResource SettingsNavTreeViewItem}">

                    <!-- General -->
                    <TreeViewItem x:Name="NavGeneral" Tag="General">
                        <TreeViewItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <ic:SymbolIcon Symbol="Settings" FontSize="16" Margin="0,0,8,0" />
                                <TextBlock Text="General" VerticalAlignment="Center" />
                            </StackPanel>
                        </TreeViewItem.Header>
                        <TreeViewItem x:Name="NavClonePath" Tag="ClonePath">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Folder" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Clone Path" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                    </TreeViewItem>

                    <!-- Authentication -->
                    <TreeViewItem x:Name="NavAuthentication" Tag="Authentication">
                        <TreeViewItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <ic:SymbolIcon Symbol="Key" FontSize="16" Margin="0,0,8,0" />
                                <TextBlock Text="Authentication" VerticalAlignment="Center" />
                            </StackPanel>
                        </TreeViewItem.Header>
                        <TreeViewItem x:Name="NavAzureDevOps" Tag="AzureDevOps">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Cloud" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Azure DevOps" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem x:Name="NavGitHub" Tag="GitHub">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Code" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="GitHub" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                    </TreeViewItem>

                    <!-- AI Integrations -->
                    <TreeViewItem x:Name="NavAI" Tag="AI">
                        <TreeViewItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <ic:SymbolIcon Symbol="Bot" FontSize="16" Margin="0,0,8,0" />
                                <TextBlock Text="AI Integrations" VerticalAlignment="Center" />
                            </StackPanel>
                        </TreeViewItem.Header>
                        <TreeViewItem x:Name="NavAIGeneral" Tag="AIGeneral">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Options" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="General" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem x:Name="NavClaude" Tag="Claude">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Bot" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Claude" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem x:Name="NavGemini" Tag="Gemini">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Bot" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Gemini" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem x:Name="NavCodex" Tag="Codex">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Bot" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Codex" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                    </TreeViewItem>
                </TreeView>
            </Grid>
        </Border>

        <!-- Right Content Panel -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0"
                          Padding="24,16"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <!-- Clone Path Content -->
                    <StackPanel x:Name="ContentClonePath" Visibility="Collapsed">
                        <TextBlock Text="Clone Path"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Set the default directory for cloning repositories"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel>
                                <TextBlock Text="Default Clone Directory"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,8" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="ClonePathTextBox"
                                             Grid.Column="0"
                                             Padding="8,6" />
                                    <Button Grid.Column="1"
                                            Margin="8,0,0,0"
                                            Padding="12,6"
                                            Click="BrowseClonePath_Click"
                                            Content="Browse..." />
                                </Grid>
                                <TextBlock Text="New repositories will be cloned to this location by default."
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                           Margin="0,8,0,0"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Azure DevOps Content -->
                    <StackPanel x:Name="ContentAzureDevOps" Visibility="Collapsed">
                        <TextBlock Text="Azure DevOps"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Connect to Azure DevOps for private repository access"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel>
                                <!-- Status header -->
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Border Width="40" Height="40"
                                            CornerRadius="8"
                                            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1">
                                        <Image Source="{Binding Text, ElementName=OrganizationTextBox, Converter={StaticResource IdenticonConverter}}"
                                               Stretch="UniformToFill" />
                                    </Border>
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Text, ElementName=OrganizationTextBox, TargetNullValue='No organization'}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                        <TextBlock x:Name="PatStatusText"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>
                                </Grid>

                                <!-- Organization -->
                                <TextBlock Text="Organization"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,4" />
                                <TextBox x:Name="OrganizationTextBox"
                                         Margin="0,0,0,4"
                                         Padding="8,6" />
                                <TextBlock Text="Your Azure DevOps organization name (e.g., 'mycompany' from dev.azure.com/mycompany)"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                           Margin="0,0,0,16"
                                           TextWrapping="Wrap" />

                                <!-- PAT -->
                                <TextBlock Text="Personal Access Token (PAT)"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,4" />
                                <TextBlock Text="Used for cloning and fetching from private repositories. Needs 'Code (Read)' scope."
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                           Margin="0,0,0,8"
                                           TextWrapping="Wrap" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <PasswordBox x:Name="PatPasswordBox"
                                                 Grid.Column="0"
                                                 Padding="8,6"
                                                 PasswordChanged="PatPasswordBox_PasswordChanged" />
                                    <Button x:Name="TogglePatVisibilityButton"
                                            Grid.Column="1"
                                            Width="60"
                                            Margin="8,0,0,0"
                                            Click="TogglePatVisibility_Click"
                                            Content="Show" />
                                </Grid>
                                <TextBox x:Name="PatTextBox"
                                         Margin="0,8,0,0"
                                         Padding="8,6"
                                         TextChanged="PatTextBox_TextChanged"
                                         Visibility="Collapsed" />

                                <!-- Actions -->
                                <StackPanel Margin="0,16,0,0" Orientation="Horizontal">
                                    <Button x:Name="SavePatButton"
                                            Padding="12,6"
                                            Click="SavePat_Click"
                                            Content="Connect" />
                                    <Button x:Name="ClearPatButton"
                                            Margin="8,0,0,0"
                                            Padding="12,6"
                                            Click="ClearPat_Click"
                                            Content="Disconnect" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- GitHub Content -->
                    <StackPanel x:Name="ContentGitHub" Visibility="Collapsed">
                        <TextBlock Text="GitHub"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Connect to GitHub for private repository access"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel>
                                <!-- Status header -->
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Border Width="40" Height="40"
                                            CornerRadius="8"
                                            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1">
                                        <Image Source="{Binding Text, ElementName=GitHubUsernameTextBox, Converter={StaticResource IdenticonConverter}}"
                                               Stretch="UniformToFill" />
                                    </Border>
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Text, ElementName=GitHubUsernameTextBox, TargetNullValue='No username'}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                        <TextBlock x:Name="GitHubStatusText"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   Text="Not connected" />
                                    </StackPanel>
                                </Grid>

                                <!-- Username -->
                                <TextBlock Text="Username or Email"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,4" />
                                <TextBox x:Name="GitHubUsernameTextBox"
                                         Margin="0,0,0,12"
                                         Padding="8,6" />

                                <!-- PAT -->
                                <TextBlock Text="Personal Access Token (PAT)"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,4" />
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <PasswordBox x:Name="GitHubPatPasswordBox"
                                                 Grid.Column="0"
                                                 Padding="8,6"
                                                 PasswordChanged="GitHubPatPasswordBox_PasswordChanged" />
                                    <Button x:Name="ToggleGitHubPatVisibilityButton"
                                            Grid.Column="1"
                                            Width="60"
                                            Margin="8,0,0,0"
                                            Click="ToggleGitHubPatVisibility_Click"
                                            Content="Show" />
                                </Grid>
                                <TextBox x:Name="GitHubPatTextBox"
                                         Margin="0,0,0,8"
                                         Padding="8,6"
                                         TextChanged="GitHubPatTextBox_TextChanged"
                                         Visibility="Collapsed" />

                                <!-- Actions -->
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="SaveGitHubPatButton"
                                            Padding="12,6"
                                            Click="SaveGitHubPat_Click"
                                            Content="Connect" />
                                    <Button x:Name="ClearGitHubPatButton"
                                            Margin="8,0,0,0"
                                            Padding="12,6"
                                            Click="ClearGitHubPat_Click"
                                            Content="Disconnect" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- AI General Content -->
                    <StackPanel x:Name="ContentAIGeneral" Visibility="Collapsed">
                        <TextBlock Text="AI Settings"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Configure general AI integration settings"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel>
                                <!-- Default AI -->
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="Default AI Provider"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                        <TextBlock Text="Select which AI to use by default for features like commit message generation"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                    <ComboBox x:Name="AiDefaultComboBox"
                                              Grid.Column="1"
                                              MinWidth="140"
                                              VerticalAlignment="Center"
                                              SelectionChanged="AiDefaultComboBox_SelectionChanged" />
                                </Grid>

                                <!-- Timeout -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="CLI Timeout"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                        <TextBlock Text="Maximum time to wait for AI CLI responses (in seconds)"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                    <TextBox x:Name="AiTimeoutTextBox"
                                             Grid.Column="1"
                                             Width="80"
                                             Padding="8,6"
                                             VerticalAlignment="Center"
                                             HorizontalContentAlignment="Center" />
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Claude Content -->
                    <StackPanel x:Name="ContentClaude" Visibility="Collapsed">
                        <TextBlock Text="Claude"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Connect to Claude CLI for AI-powered features"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Claude CLI"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                    <TextBlock x:Name="ClaudeStatusText"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               Text="Not connected" />
                                </StackPanel>
                                <Button x:Name="ClaudeConnectButton"
                                        Grid.Column="1"
                                        Padding="12,6"
                                        Click="ClaudeConnect_Click"
                                        Content="Connect" />
                                <Button x:Name="ClaudeDisconnectButton"
                                        Grid.Column="2"
                                        Margin="8,0,0,0"
                                        Padding="12,6"
                                        Click="ClaudeDisconnect_Click"
                                        Content="Disconnect"
                                        IsEnabled="False" />
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Gemini Content -->
                    <StackPanel x:Name="ContentGemini" Visibility="Collapsed">
                        <TextBlock Text="Gemini"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Connect to Gemini CLI for AI-powered features"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Gemini CLI"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                    <TextBlock x:Name="GeminiStatusText"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               Text="Not connected" />
                                </StackPanel>
                                <Button x:Name="GeminiConnectButton"
                                        Grid.Column="1"
                                        Padding="12,6"
                                        Click="GeminiConnect_Click"
                                        Content="Connect" />
                                <Button x:Name="GeminiDisconnectButton"
                                        Grid.Column="2"
                                        Margin="8,0,0,0"
                                        Padding="12,6"
                                        Click="GeminiDisconnect_Click"
                                        Content="Disconnect"
                                        IsEnabled="False" />
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Codex Content -->
                    <StackPanel x:Name="ContentCodex" Visibility="Collapsed">
                        <TextBlock Text="Codex"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Connect to Codex CLI for AI-powered features"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Codex CLI"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                    <TextBlock x:Name="CodexStatusText"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               Text="Not connected" />
                                </StackPanel>
                                <Button x:Name="CodexConnectButton"
                                        Grid.Column="1"
                                        Padding="12,6"
                                        Click="CodexConnect_Click"
                                        Content="Connect" />
                                <Button x:Name="CodexDisconnectButton"
                                        Grid.Column="2"
                                        Margin="8,0,0,0"
                                        Padding="12,6"
                                        Click="CodexDisconnect_Click"
                                        Content="Disconnect"
                                        IsEnabled="False" />
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Search Results (shown when searching) -->
                    <StackPanel x:Name="ContentSearchResults" Visibility="Collapsed">
                        <TextBlock Text="Search Results"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,16" />
                        <ItemsControl x:Name="SearchResultsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Margin="0,0,0,8"
                                            Padding="12,10"
                                            HorizontalContentAlignment="Left"
                                            Click="SearchResult_Click"
                                            Tag="{Binding Tag}">
                                        <StackPanel Orientation="Horizontal">
                                            <ic:SymbolIcon Symbol="{Binding Icon}" FontSize="16" Margin="0,0,10,0" />
                                            <StackPanel>
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" />
                                                <TextBlock Text="{Binding Description}"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock x:Name="NoSearchResultsText"
                                   Text="No settings found matching your search."
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Visibility="Collapsed"
                                   Margin="0,8,0,0" />
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="1"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="24,12">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button Padding="16,8"
                            Click="Close_Click"
                            Content="Close"
                            IsCancel="True" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
