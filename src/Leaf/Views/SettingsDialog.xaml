<Window
    x:Class="Leaf.Views.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ic="clr-namespace:FluentIcons.Wpf;assembly=FluentIcons.Wpf"
    Title="Settings"
    Width="750"
    Height="550"
    MinWidth="650"
    MinHeight="450"
    Background="{DynamicResource ApplicationBackgroundBrush}"
    ResizeMode="CanResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <!-- Setting item model for TreeView -->
        <Style x:Key="SettingsNavTreeViewItem" TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
            <Setter Property="IsExpanded" Value="True" />
            <Setter Property="Padding" Value="4,6" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left Navigation Panel -->
        <Border Grid.Column="0"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Text="Settings"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                           Margin="16,16,16,8" />

                <!-- Search Box -->
                <Grid Grid.Row="1" Margin="12,4,12,12">
                    <TextBox x:Name="SearchBox"
                             Padding="28,6,8,6"
                             TextChanged="SearchBox_TextChanged" />
                    <ic:SymbolIcon Symbol="Search"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"
                                   IsHitTestVisible="False" />
                    <TextBlock Text="Search settings..."
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                               VerticalAlignment="Center"
                               Margin="30,0,0,0"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Navigation TreeView -->
                <TreeView x:Name="SettingsNavTree"
                          Grid.Row="2"
                          BorderThickness="0"
                          Background="Transparent"
                          Padding="8,0"
                          SelectedItemChanged="SettingsNavTree_SelectedItemChanged"
                          ItemContainerStyle="{StaticResource SettingsNavTreeViewItem}">

                    <!-- General -->
                    <TreeViewItem x:Name="NavGeneral" Tag="General">
                        <TreeViewItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <ic:SymbolIcon Symbol="Settings" FontSize="16" Margin="0,0,8,0" />
                                <TextBlock Text="General" VerticalAlignment="Center" />
                            </StackPanel>
                        </TreeViewItem.Header>
                        <TreeViewItem x:Name="NavClonePath" Tag="ClonePath">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Folder" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Clone Path" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                    </TreeViewItem>
                    <TreeViewItem x:Name="NavTerminal" Tag="Terminal">
                        <TreeViewItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <ic:SymbolIcon Symbol="Code" FontSize="16" Margin="0,0,8,0" />
                                <TextBlock Text="Terminal" VerticalAlignment="Center" />
                            </StackPanel>
                        </TreeViewItem.Header>
                    </TreeViewItem>

                    <!-- Authentication -->
                    <TreeViewItem x:Name="NavAuthentication" Tag="Authentication">
                        <TreeViewItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <ic:SymbolIcon Symbol="Key" FontSize="16" Margin="0,0,8,0" />
                                <TextBlock Text="Authentication" VerticalAlignment="Center" />
                            </StackPanel>
                        </TreeViewItem.Header>
                        <TreeViewItem x:Name="NavAzureDevOps" Tag="AzureDevOps">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Cloud" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Azure DevOps" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem x:Name="NavGitHub" Tag="GitHub">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Code" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="GitHub" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                    </TreeViewItem>

                    <!-- AI Integrations -->
                    <TreeViewItem x:Name="NavAI" Tag="AI">
                        <TreeViewItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <ic:SymbolIcon Symbol="Bot" FontSize="16" Margin="0,0,8,0" />
                                <TextBlock Text="AI Integrations" VerticalAlignment="Center" />
                            </StackPanel>
                        </TreeViewItem.Header>
                        <TreeViewItem x:Name="NavAIGeneral" Tag="AIGeneral">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Options" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="General" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem x:Name="NavClaude" Tag="Claude">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Bot" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Claude" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem x:Name="NavGemini" Tag="Gemini">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Bot" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Gemini" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem x:Name="NavCodex" Tag="Codex">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Bot" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Codex" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem x:Name="NavOllama" Tag="Ollama">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Bot" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Ollama" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                    </TreeViewItem>

                    <!-- GitFlow Defaults -->
                    <TreeViewItem x:Name="NavGitFlow" Tag="GitFlow">
                        <TreeViewItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <ic:SymbolIcon Symbol="Flow" FontSize="16" Margin="0,0,8,0" />
                                <TextBlock Text="GitFlow Defaults" VerticalAlignment="Center" />
                            </StackPanel>
                        </TreeViewItem.Header>
                    </TreeViewItem>
                </TreeView>
            </Grid>
        </Border>

        <!-- Right Content Panel -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0"
                          Padding="24,16"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <!-- Clone Path Content -->
                    <StackPanel x:Name="ContentClonePath" Visibility="Collapsed">
                        <TextBlock Text="Clone Path"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Set the default directory for cloning repositories"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel>
                                <TextBlock Text="Default Clone Directory"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,8" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="ClonePathTextBox"
                                             Grid.Column="0"
                                             Padding="8,6" />
                                    <Button Grid.Column="1"
                                            Margin="8,0,0,0"
                                            Padding="12,6"
                                            Click="BrowseClonePath_Click"
                                            Content="Browse..." />
                                </Grid>
                                <TextBlock Text="New repositories will be cloned to this location by default."
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                           Margin="0,8,0,0"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Terminal Content -->
                    <StackPanel x:Name="ContentTerminal" Visibility="Collapsed">
                        <TextBlock Text="Terminal"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Configure the built-in command terminal"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <StackPanel Margin="0,0,0,14">
                            <TextBlock Text="Shell executable"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Margin="0,0,0,6" />
                            <TextBox x:Name="TerminalShellExecutableTextBox" />
                        </StackPanel>

                        <StackPanel Margin="0,0,0,14">
                            <TextBlock Text="Shell arguments template"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Margin="0,0,0,6" />
                            <TextBox x:Name="TerminalShellArgumentsTextBox" />
                            <TextBlock Text="Use {command} as a placeholder for the entered command."
                                       FontSize="11"
                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                       Margin="0,4,0,0" />
                        </StackPanel>

                        <StackPanel Margin="0,0,0,14">
                            <TextBlock Text="Max output lines"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Margin="0,0,0,6" />
                            <TextBox x:Name="TerminalMaxLinesTextBox" Width="120" />
                        </StackPanel>

                        <StackPanel Margin="0,0,0,14">
                            <TextBlock Text="Font size"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Margin="0,0,0,6" />
                            <TextBox x:Name="TerminalFontSizeTextBox" Width="120" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <CheckBox x:Name="TerminalAutoScrollCheckBox" Content="Auto-scroll output" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox x:Name="TerminalLogGitCommandsCheckBox" Content="Log Git commands from Leaf" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Azure DevOps Content -->
                    <StackPanel x:Name="ContentAzureDevOps" Visibility="Collapsed">
                        <TextBlock Text="Azure DevOps"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Connect to Azure DevOps for private repository access"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel>
                                <!-- Organization (always visible) -->
                                <TextBlock Text="Organization"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,4" />
                                <TextBox x:Name="OrganizationTextBox"
                                         Margin="0,0,0,4"
                                         Padding="8,6" />
                                <TextBlock Text="Your Azure DevOps organization name (e.g., 'mycompany' from dev.azure.com/mycompany)"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                           Margin="0,0,0,16"
                                           TextWrapping="Wrap" />

                                <!-- OAuth Section -->
                                <Border x:Name="AzureDevOpsOAuthSection"
                                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                                        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="12"
                                        Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Avatar (shown when connected via OAuth) -->
                                        <Border x:Name="AzureDevOpsOAuthAvatar"
                                                Width="40" Height="40"
                                                CornerRadius="20"
                                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                                BorderThickness="1"
                                                Margin="0,0,12,0"
                                                Visibility="Collapsed">
                                            <Grid>
                                                <Grid.Clip>
                                                    <EllipseGeometry Center="19,19" RadiusX="19" RadiusY="19" />
                                                </Grid.Clip>
                                                <Image x:Name="AzureDevOpsOAuthIdenticonImage" Stretch="UniformToFill" />
                                            </Grid>
                                        </Border>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <ic:SymbolIcon Symbol="Person" FontSize="16" Margin="0,0,8,0" />
                                                <TextBlock Text="Sign in with Microsoft"
                                                           FontWeight="SemiBold"
                                                           VerticalAlignment="Center"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                                <Border Background="{DynamicResource AccentFillColorDefaultBrush}"
                                                        CornerRadius="4"
                                                        Padding="6,2"
                                                        Margin="8,0,0,0">
                                                    <TextBlock Text="Recommended"
                                                               FontSize="10"
                                                               Foreground="White" />
                                                </Border>
                                            </StackPanel>
                                            <TextBlock x:Name="AzureDevOpsOAuthStatusText"
                                                       Text="Securely authenticate using your browser"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       Margin="24,4,0,0" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <Button x:Name="AzureDevOpsOAuthButton"
                                                    Padding="16,8"
                                                    Click="AzureDevOpsOAuth_Click"
                                                    Content="Sign in" />
                                            <Button x:Name="AzureDevOpsOAuthDisconnectButton"
                                                    Padding="12,6"
                                                    Margin="8,0,0,0"
                                                    Click="AzureDevOpsDisconnect_Click"
                                                    Content="Disconnect"
                                                    Visibility="Collapsed" />
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- PAT Section -->
                                <Border x:Name="AzureDevOpsPatSection"
                                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                                        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="12">
                                    <StackPanel>
                                        <!-- PAT Header -->
                                        <Grid Margin="0,0,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Avatar (shown when connected via PAT) -->
                                            <Border x:Name="AzureDevOpsPatAvatar"
                                                    Width="40" Height="40"
                                                    CornerRadius="20"
                                                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                                    BorderThickness="1"
                                                    Margin="0,0,12,0"
                                                    Visibility="Collapsed">
                                                <Grid>
                                                    <Grid.Clip>
                                                        <EllipseGeometry Center="19,19" RadiusX="19" RadiusY="19" />
                                                    </Grid.Clip>
                                                    <Image x:Name="AzureDevOpsPatIdenticonImage" Stretch="UniformToFill" />
                                                </Grid>
                                            </Border>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal">
                                                    <ic:SymbolIcon Symbol="Key" FontSize="16" Margin="0,0,8,0" />
                                                    <TextBlock Text="Personal Access Token"
                                                               FontWeight="SemiBold"
                                                               VerticalAlignment="Center"
                                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                                </StackPanel>
                                                <TextBlock x:Name="AzureDevOpsPatStatusText"
                                                           Text="Use a PAT for authentication"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                           Margin="24,4,0,0" />
                                            </StackPanel>

                                            <Button x:Name="AzureDevOpsPatDisconnectButton"
                                                    Grid.Column="2"
                                                    Padding="12,6"
                                                    Click="AzureDevOpsDisconnect_Click"
                                                    Content="Disconnect"
                                                    Visibility="Collapsed" />
                                        </Grid>

                                        <!-- PAT Input Fields (shown when not connected via PAT) -->
                                        <StackPanel x:Name="AzureDevOpsPatInputPanel" Margin="0,12,0,0">
                                            <!-- PAT -->
                                            <TextBlock Text="Personal Access Token"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       Margin="0,0,0,4" />
                                            <TextBlock Text="Needs 'Code (Read)' scope for cloning/fetching, or 'Code (Read &amp; Write)' for pushing."
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                       Margin="0,0,0,8"
                                                       TextWrapping="Wrap" />
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <PasswordBox x:Name="PatPasswordBox"
                                                             Grid.Column="0"
                                                             Padding="8,6"
                                                             PasswordChanged="PatPasswordBox_PasswordChanged" />
                                                <Button x:Name="TogglePatVisibilityButton"
                                                        Grid.Column="1"
                                                        Width="60"
                                                        Margin="8,0,0,0"
                                                        Click="TogglePatVisibility_Click"
                                                        Content="Show" />
                                            </Grid>
                                            <TextBox x:Name="PatTextBox"
                                                     Margin="0,0,0,8"
                                                     Padding="8,6"
                                                     TextChanged="PatTextBox_TextChanged"
                                                     Visibility="Collapsed" />

                                            <!-- PAT Connect Button -->
                                            <Button x:Name="SavePatButton"
                                                    Padding="12,6"
                                                    Click="SavePat_Click"
                                                    Content="Connect" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- OAuth Flow Panel (shown during authorization) -->
                                <StackPanel x:Name="AzureDevOpsOAuthFlowPanel" Visibility="Collapsed">
                                    <TextBlock Text="Complete authorization in your browser"
                                               FontWeight="SemiBold"
                                               FontSize="14"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                               Margin="0,0,0,16" />

                                    <!-- User Code Display -->
                                    <TextBlock Text="Your verification code:"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               Margin="0,0,0,8" />
                                    <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="20,12"
                                            HorizontalAlignment="Left">
                                        <TextBlock x:Name="AzureDevOpsUserCodeText"
                                                   FontSize="28"
                                                   FontWeight="Bold"
                                                   FontFamily="Consolas"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                   Text="XXXXXXXXX" />
                                    </Border>
                                    <Button x:Name="AzureDevOpsCopyCodeButton"
                                            Margin="0,8,0,0"
                                            Padding="12,6"
                                            HorizontalAlignment="Left"
                                            Click="AzureDevOpsCopyCode_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <ic:SymbolIcon Symbol="Copy" FontSize="14" Margin="0,0,6,0" />
                                            <TextBlock Text="Copy Code" />
                                        </StackPanel>
                                    </Button>

                                    <!-- Instructions -->
                                    <StackPanel Margin="0,20,0,0">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="1. Go to "
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                            <TextBlock x:Name="AzureDevOpsVerificationUriText"
                                                       Text="https://microsoft.com/devicelogin"
                                                       Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                                       TextDecorations="Underline"
                                                       Cursor="Hand"
                                                       MouseDown="AzureDevOpsVerificationUri_Click" />
                                        </StackPanel>
                                        <TextBlock Text="2. Enter the code above and sign in with your Microsoft account"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>

                                    <!-- Progress -->
                                    <ProgressBar x:Name="AzureDevOpsOAuthProgressBar"
                                                 IsIndeterminate="True"
                                                 Margin="0,20,0,0" />
                                    <TextBlock x:Name="AzureDevOpsOAuthStatusMessage"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               Margin="0,8,0,0"
                                               Text="Waiting for authorization..." />

                                    <!-- Cancel -->
                                    <Button x:Name="AzureDevOpsCancelOAuthButton"
                                            Margin="0,16,0,0"
                                            Padding="12,6"
                                            Click="AzureDevOpsCancelOAuth_Click"
                                            Content="Cancel" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- GitHub Content -->
                    <StackPanel x:Name="ContentGitHub" Visibility="Collapsed">
                        <TextBlock Text="GitHub"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Connect to GitHub for private repository access"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel>
                                <!-- OAuth Section -->
                                <Border x:Name="GitHubOAuthSection"
                                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                                        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="12"
                                        Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Avatar (shown when connected via OAuth) -->
                                        <Border x:Name="GitHubOAuthAvatar"
                                                Width="40" Height="40"
                                                CornerRadius="20"
                                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                                BorderThickness="1"
                                                Margin="0,0,12,0"
                                                Visibility="Collapsed">
                                            <Grid>
                                                <Grid.Clip>
                                                    <EllipseGeometry Center="19,19" RadiusX="19" RadiusY="19" />
                                                </Grid.Clip>
                                                <Image x:Name="GitHubOAuthIdenticonImage" Stretch="UniformToFill" />
                                                <Image x:Name="GitHubOAuthAvatarImage" Stretch="UniformToFill" />
                                            </Grid>
                                        </Border>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <ic:SymbolIcon Symbol="Person" FontSize="16" Margin="0,0,8,0" />
                                                <TextBlock Text="Sign in with GitHub"
                                                           FontWeight="SemiBold"
                                                           VerticalAlignment="Center"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                                <Border Background="{DynamicResource AccentFillColorDefaultBrush}"
                                                        CornerRadius="4"
                                                        Padding="6,2"
                                                        Margin="8,0,0,0">
                                                    <TextBlock Text="Recommended"
                                                               FontSize="10"
                                                               Foreground="White" />
                                                </Border>
                                            </StackPanel>
                                            <TextBlock x:Name="GitHubOAuthStatusText"
                                                       Text="Securely authenticate using your browser"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       Margin="24,4,0,0" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <Button x:Name="GitHubOAuthButton"
                                                    Padding="16,8"
                                                    Click="GitHubOAuth_Click"
                                                    Content="Sign in" />
                                            <Button x:Name="GitHubOAuthDisconnectButton"
                                                    Padding="12,6"
                                                    Margin="8,0,0,0"
                                                    Click="GitHubDisconnect_Click"
                                                    Content="Disconnect"
                                                    Visibility="Collapsed" />
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- PAT Section -->
                                <Border x:Name="GitHubPatSection"
                                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                                        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="12">
                                    <StackPanel>
                                        <!-- PAT Header -->
                                        <Grid Margin="0,0,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Avatar (shown when connected via PAT) -->
                                            <Border x:Name="GitHubPatAvatar"
                                                    Width="40" Height="40"
                                                    CornerRadius="20"
                                                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                                    BorderThickness="1"
                                                    Margin="0,0,12,0"
                                                    Visibility="Collapsed">
                                                <Grid>
                                                    <Grid.Clip>
                                                        <EllipseGeometry Center="19,19" RadiusX="19" RadiusY="19" />
                                                    </Grid.Clip>
                                                    <Image x:Name="GitHubPatIdenticonImage" Stretch="UniformToFill" />
                                                </Grid>
                                            </Border>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal">
                                                    <ic:SymbolIcon Symbol="Key" FontSize="16" Margin="0,0,8,0" />
                                                    <TextBlock Text="Personal Access Token"
                                                               FontWeight="SemiBold"
                                                               VerticalAlignment="Center"
                                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                                </StackPanel>
                                                <TextBlock x:Name="GitHubPatStatusText"
                                                           Text="Use a PAT for authentication"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                           Margin="24,4,0,0" />
                                            </StackPanel>

                                            <Button x:Name="GitHubPatDisconnectButton"
                                                    Grid.Column="2"
                                                    Padding="12,6"
                                                    Click="GitHubDisconnect_Click"
                                                    Content="Disconnect"
                                                    Visibility="Collapsed" />
                                        </Grid>

                                        <!-- PAT Input Fields (shown when not connected via PAT) -->
                                        <StackPanel x:Name="GitHubPatInputPanel" Margin="0,12,0,0">
                                            <!-- PAT -->
                                            <TextBlock Text="Personal Access Token"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       Margin="0,0,0,4" />
                                            <TextBlock Text="Needs 'repo' scope (Full control of private repositories) for cloning, pushing, and pulling."
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                       Margin="0,0,0,8"
                                                       TextWrapping="Wrap" />
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <PasswordBox x:Name="GitHubPatPasswordBox"
                                                             Grid.Column="0"
                                                             Padding="8,6"
                                                             PasswordChanged="GitHubPatPasswordBox_PasswordChanged" />
                                                <Button x:Name="ToggleGitHubPatVisibilityButton"
                                                        Grid.Column="1"
                                                        Width="60"
                                                        Margin="8,0,0,0"
                                                        Click="ToggleGitHubPatVisibility_Click"
                                                        Content="Show" />
                                            </Grid>
                                            <TextBox x:Name="GitHubPatTextBox"
                                                     Margin="0,0,0,8"
                                                     Padding="8,6"
                                                     TextChanged="GitHubPatTextBox_TextChanged"
                                                     Visibility="Collapsed" />

                                            <!-- PAT Connect Button -->
                                            <Button x:Name="SaveGitHubPatButton"
                                                    Padding="12,6"
                                                    Click="SaveGitHubPat_Click"
                                                    Content="Connect" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- OAuth Flow Panel (shown during authorization) -->
                                <StackPanel x:Name="GitHubOAuthFlowPanel" Visibility="Collapsed">
                                    <TextBlock Text="Complete authorization in your browser"
                                               FontWeight="SemiBold"
                                               FontSize="14"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                               Margin="0,0,0,16" />

                                    <!-- User Code Display -->
                                    <TextBlock Text="Your verification code:"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               Margin="0,0,0,8" />
                                    <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="20,12"
                                            HorizontalAlignment="Left">
                                        <TextBlock x:Name="GitHubUserCodeText"
                                                   FontSize="28"
                                                   FontWeight="Bold"
                                                   FontFamily="Consolas"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                   Text="XXXX-XXXX" />
                                    </Border>
                                    <Button x:Name="GitHubCopyCodeButton"
                                            Margin="0,8,0,0"
                                            Padding="12,6"
                                            HorizontalAlignment="Left"
                                            Click="GitHubCopyCode_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <ic:SymbolIcon Symbol="Copy" FontSize="14" Margin="0,0,6,0" />
                                            <TextBlock Text="Copy Code" />
                                        </StackPanel>
                                    </Button>

                                    <!-- Instructions -->
                                    <StackPanel Margin="0,20,0,0">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="1. Go to "
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                            <TextBlock x:Name="GitHubVerificationUriText"
                                                       Text="https://github.com/login/device"
                                                       Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                                       TextDecorations="Underline"
                                                       Cursor="Hand"
                                                       MouseDown="GitHubVerificationUri_Click" />
                                        </StackPanel>
                                        <TextBlock Text="2. Enter the code above and authorize Leaf"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>

                                    <!-- Progress -->
                                    <ProgressBar x:Name="GitHubOAuthProgressBar"
                                                 IsIndeterminate="True"
                                                 Margin="0,20,0,0" />
                                    <TextBlock x:Name="GitHubOAuthStatusMessage"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               Margin="0,8,0,0"
                                               Text="Waiting for authorization..." />

                                    <!-- Cancel -->
                                    <Button x:Name="GitHubCancelOAuthButton"
                                            Margin="0,16,0,0"
                                            Padding="12,6"
                                            Click="GitHubCancelOAuth_Click"
                                            Content="Cancel" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- AI General Content -->
                    <StackPanel x:Name="ContentAIGeneral" Visibility="Collapsed">
                        <TextBlock Text="AI Settings"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Configure general AI integration settings"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel>
                                <!-- Default AI -->
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="Default AI Provider"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                        <TextBlock Text="Select which AI to use by default for features like commit message generation"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                    <ComboBox x:Name="AiDefaultComboBox"
                                              Grid.Column="1"
                                              MinWidth="140"
                                              VerticalAlignment="Center"
                                              SelectionChanged="AiDefaultComboBox_SelectionChanged" />
                                </Grid>

                                <!-- Timeout -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="CLI Timeout"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                        <TextBlock Text="Maximum time to wait for AI CLI responses (in seconds)"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                    <TextBox x:Name="AiTimeoutTextBox"
                                             Grid.Column="1"
                                             Width="80"
                                             Padding="8,6"
                                             VerticalAlignment="Center"
                                             HorizontalContentAlignment="Center" />
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Claude Content -->
                    <StackPanel x:Name="ContentClaude" Visibility="Collapsed">
                        <TextBlock Text="Claude"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Connect to Claude CLI for AI-powered features"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Claude CLI"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                    <TextBlock x:Name="ClaudeStatusText"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               Text="Not connected" />
                                </StackPanel>
                                <Button x:Name="ClaudeConnectButton"
                                        Grid.Column="1"
                                        Padding="12,6"
                                        Click="ClaudeConnect_Click"
                                        Content="Connect" />
                                <Button x:Name="ClaudeDisconnectButton"
                                        Grid.Column="2"
                                        Margin="8,0,0,0"
                                        Padding="12,6"
                                        Click="ClaudeDisconnect_Click"
                                        Content="Disconnect"
                                        IsEnabled="False" />
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Gemini Content -->
                    <StackPanel x:Name="ContentGemini" Visibility="Collapsed">
                        <TextBlock Text="Gemini"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Connect to Gemini CLI for AI-powered features"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Gemini CLI"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                    <TextBlock x:Name="GeminiStatusText"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               Text="Not connected" />
                                </StackPanel>
                                <Button x:Name="GeminiConnectButton"
                                        Grid.Column="1"
                                        Padding="12,6"
                                        Click="GeminiConnect_Click"
                                        Content="Connect" />
                                <Button x:Name="GeminiDisconnectButton"
                                        Grid.Column="2"
                                        Margin="8,0,0,0"
                                        Padding="12,6"
                                        Click="GeminiDisconnect_Click"
                                        Content="Disconnect"
                                        IsEnabled="False" />
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Codex Content -->
                    <StackPanel x:Name="ContentCodex" Visibility="Collapsed">
                        <TextBlock Text="Codex"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Connect to Codex CLI for AI-powered features"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Codex CLI"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                    <TextBlock x:Name="CodexStatusText"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               Text="Not connected" />
                                </StackPanel>
                                <Button x:Name="CodexConnectButton"
                                        Grid.Column="1"
                                        Padding="12,6"
                                        Click="CodexConnect_Click"
                                        Content="Connect" />
                                <Button x:Name="CodexDisconnectButton"
                                        Grid.Column="2"
                                        Margin="8,0,0,0"
                                        Padding="12,6"
                                        Click="CodexDisconnect_Click"
                                        Content="Disconnect"
                                        IsEnabled="False" />
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Ollama Content -->
                    <StackPanel x:Name="ContentOllama" Visibility="Collapsed">
                        <TextBlock Text="Ollama"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Connect to Ollama for local AI-powered features (no API costs, runs offline)"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel>
                                <!-- Base URL -->
                                <TextBlock Text="Ollama URL"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,4" />
                                <TextBox x:Name="OllamaBaseUrlTextBox"
                                         Text="http://localhost:11434"
                                         Margin="0,0,0,4"
                                         Padding="8,6" />
                                <TextBlock Text="Default: http://localhost:11434"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                           Margin="0,0,0,16"
                                           TextWrapping="Wrap" />

                                <!-- Model Selection -->
                                <TextBlock Text="Model"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,4" />
                                <Grid Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ComboBox x:Name="OllamaModelComboBox"
                                              Grid.Column="0"
                                              Padding="8,6" />
                                    <Button x:Name="OllamaRefreshModelsButton"
                                            Grid.Column="1"
                                            Margin="8,0,0,0"
                                            Padding="12,6"
                                            Click="OllamaRefreshModels_Click"
                                            Content="Refresh" />
                                </Grid>
                                <TextBlock Text="Recommended: llama3.1:8b, deepseek-coder:6.7b, or qwen2.5-coder:7b"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                           Margin="0,0,0,16"
                                           TextWrapping="Wrap" />

                                <!-- Status and Connect/Disconnect -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Connection Status"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                        <TextBlock x:Name="OllamaStatusText"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   Text="Not connected" />
                                    </StackPanel>
                                    <Button x:Name="OllamaConnectButton"
                                            Grid.Column="1"
                                            Padding="12,6"
                                            Click="OllamaConnect_Click"
                                            Content="Connect" />
                                    <Button x:Name="OllamaDisconnectButton"
                                            Grid.Column="2"
                                            Margin="8,0,0,0"
                                            Padding="12,6"
                                            Click="OllamaDisconnect_Click"
                                            Content="Disconnect"
                                            IsEnabled="False" />
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- GitFlow Defaults Content -->
                    <StackPanel x:Name="ContentGitFlow" Visibility="Collapsed">
                        <TextBlock Text="GitFlow Defaults"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Set default values used when initializing GitFlow on new repositories"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <!-- Branch Names -->
                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Branch Names"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,16" />

                                <!-- Main Branch -->
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Main Branch:"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               VerticalAlignment="Center" />
                                    <TextBox x:Name="GitFlowDefaultMainBranch" Grid.Column="1"
                                             Text="main"
                                             MaxWidth="200"
                                             HorizontalAlignment="Left" />
                                </Grid>

                                <!-- Develop Branch -->
                                <Grid Margin="0,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Develop Branch:"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               VerticalAlignment="Center" />
                                    <TextBox x:Name="GitFlowDefaultDevelopBranch" Grid.Column="1"
                                             Text="develop"
                                             MaxWidth="200"
                                             HorizontalAlignment="Left" />
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Prefixes -->
                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Branch Prefixes"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,16" />

                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Feature Prefix:"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               VerticalAlignment="Center" />
                                    <TextBox x:Name="GitFlowDefaultFeaturePrefix" Grid.Column="1"
                                             Text="feature/"
                                             FontFamily="Consolas"
                                             MaxWidth="200"
                                             HorizontalAlignment="Left" />
                                </Grid>

                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Release Prefix:"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               VerticalAlignment="Center" />
                                    <TextBox x:Name="GitFlowDefaultReleasePrefix" Grid.Column="1"
                                             Text="release/"
                                             FontFamily="Consolas"
                                             MaxWidth="200"
                                             HorizontalAlignment="Left" />
                                </Grid>

                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Hotfix Prefix:"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               VerticalAlignment="Center" />
                                    <TextBox x:Name="GitFlowDefaultHotfixPrefix" Grid.Column="1"
                                             Text="hotfix/"
                                             FontFamily="Consolas"
                                             MaxWidth="200"
                                             HorizontalAlignment="Left" />
                                </Grid>

                                <Grid Margin="0,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Version Tag Prefix:"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               VerticalAlignment="Center" />
                                    <TextBox x:Name="GitFlowDefaultVersionTagPrefix" Grid.Column="1"
                                             Text="v"
                                             FontFamily="Consolas"
                                             MaxWidth="200"
                                             HorizontalAlignment="Left" />
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Options -->
                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel>
                                <TextBlock Text="Default Options"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,16" />

                                <CheckBox x:Name="GitFlowDefaultDeleteBranch"
                                          Content="Delete branch after finish"
                                          IsChecked="True"
                                          Margin="0,0,0,8" />

                                <CheckBox x:Name="GitFlowDefaultGenerateChangelog"
                                          Content="Generate changelog on release/hotfix finish"
                                          IsChecked="True" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Search Results (shown when searching) -->
                    <StackPanel x:Name="ContentSearchResults" Visibility="Collapsed">
                        <TextBlock Text="Search Results"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,16" />
                        <ItemsControl x:Name="SearchResultsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Margin="0,0,0,8"
                                            Padding="12,10"
                                            HorizontalContentAlignment="Left"
                                            Click="SearchResult_Click"
                                            Tag="{Binding Tag}">
                                        <StackPanel Orientation="Horizontal">
                                            <ic:SymbolIcon Symbol="{Binding Icon}" FontSize="16" Margin="0,0,10,0" />
                                            <StackPanel>
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" />
                                                <TextBlock Text="{Binding Description}"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock x:Name="NoSearchResultsText"
                                   Text="No settings found matching your search."
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Visibility="Collapsed"
                                   Margin="0,8,0,0" />
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="1"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="24,12">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button Padding="16,8"
                            Click="Close_Click"
                            Content="Close"
                            IsCancel="True" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
