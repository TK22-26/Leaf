<Window
    x:Class="Leaf.Views.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ic="clr-namespace:FluentIcons.Wpf;assembly=FluentIcons.Wpf"
    xmlns:settings="clr-namespace:Leaf.Views.Settings"
    Title="Settings"
    Width="750"
    Height="550"
    MinWidth="650"
    MinHeight="450"
    Background="{DynamicResource ApplicationBackgroundBrush}"
    ResizeMode="CanResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <!-- Setting item model for TreeView -->
        <Style x:Key="SettingsNavTreeViewItem" TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
            <Setter Property="IsExpanded" Value="True" />
            <Setter Property="Padding" Value="4,6" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left Navigation Panel -->
        <Border Grid.Column="0"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Text="Settings"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                           Margin="16,16,16,8" />

                <!-- Search Box -->
                <Grid Grid.Row="1" Margin="12,4,12,12">
                    <TextBox x:Name="SearchBox"
                             Padding="28,6,8,6"
                             TextChanged="SearchBox_TextChanged" />
                    <ic:SymbolIcon Symbol="Search"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"
                                   IsHitTestVisible="False" />
                    <TextBlock Text="Search settings..."
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                               VerticalAlignment="Center"
                               Margin="30,0,0,0"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Navigation TreeView -->
                <TreeView x:Name="SettingsNavTree"
                          Grid.Row="2"
                          BorderThickness="0"
                          Background="Transparent"
                          Padding="8,0"
                          SelectedItemChanged="SettingsNavTree_SelectedItemChanged"
                          ItemContainerStyle="{StaticResource SettingsNavTreeViewItem}">

                    <!-- General -->
                    <TreeViewItem x:Name="NavGeneral" Tag="General">
                        <TreeViewItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <ic:SymbolIcon Symbol="Settings" FontSize="16" Margin="0,0,8,0" />
                                <TextBlock Text="General" VerticalAlignment="Center" />
                            </StackPanel>
                        </TreeViewItem.Header>
                        <TreeViewItem x:Name="NavClonePath" Tag="ClonePath">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Folder" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Clone Path" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem x:Name="NavWatchedFolders" Tag="WatchedFolders">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Eye" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Watched Folders" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem x:Name="NavRemotes" Tag="Remotes">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Cloud" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Remotes" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                    </TreeViewItem>
                    <TreeViewItem x:Name="NavTerminal" Tag="Terminal">
                        <TreeViewItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <ic:SymbolIcon Symbol="Code" FontSize="16" Margin="0,0,8,0" />
                                <TextBlock Text="Terminal" VerticalAlignment="Center" />
                            </StackPanel>
                        </TreeViewItem.Header>
                    </TreeViewItem>

                    <!-- Authentication -->
                    <TreeViewItem x:Name="NavAuthentication" Tag="Authentication">
                        <TreeViewItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <ic:SymbolIcon Symbol="Key" FontSize="16" Margin="0,0,8,0" />
                                <TextBlock Text="Authentication" VerticalAlignment="Center" />
                            </StackPanel>
                        </TreeViewItem.Header>
                        <TreeViewItem x:Name="NavAuthGeneral" Tag="AuthGeneral">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Options" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="General" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem x:Name="NavAzureDevOps" Tag="AzureDevOps">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Cloud" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Azure DevOps" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem x:Name="NavGitHub" Tag="GitHub">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Code" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="GitHub" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                    </TreeViewItem>

                    <!-- AI Integrations -->
                    <TreeViewItem x:Name="NavAI" Tag="AI">
                        <TreeViewItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <ic:SymbolIcon Symbol="Bot" FontSize="16" Margin="0,0,8,0" />
                                <TextBlock Text="AI Integrations" VerticalAlignment="Center" />
                            </StackPanel>
                        </TreeViewItem.Header>
                        <TreeViewItem x:Name="NavAIGeneral" Tag="AIGeneral">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Options" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="General" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem x:Name="NavClaude" Tag="Claude">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Bot" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Claude" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem x:Name="NavGemini" Tag="Gemini">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Bot" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Gemini" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem x:Name="NavCodex" Tag="Codex">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Bot" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Codex" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                        <TreeViewItem x:Name="NavOllama" Tag="Ollama">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="Bot" FontSize="14" Margin="0,0,8,0" />
                                    <TextBlock Text="Ollama" VerticalAlignment="Center" />
                                </StackPanel>
                            </TreeViewItem.Header>
                        </TreeViewItem>
                    </TreeViewItem>

                    <!-- GitFlow Defaults -->
                    <TreeViewItem x:Name="NavGitFlow" Tag="GitFlow">
                        <TreeViewItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <ic:SymbolIcon Symbol="Flow" FontSize="16" Margin="0,0,8,0" />
                                <TextBlock Text="GitFlow Defaults" VerticalAlignment="Center" />
                            </StackPanel>
                        </TreeViewItem.Header>
                    </TreeViewItem>
                </TreeView>
            </Grid>
        </Border>

        <!-- Right Content Panel -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0"
                          Padding="24,16"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <!-- Clone Path Content -->
                    <StackPanel x:Name="ContentClonePath" Visibility="Collapsed">
                        <TextBlock Text="Clone Path"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Set the default directory for cloning repositories"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel>
                                <TextBlock Text="Default Clone Directory"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,8" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="ClonePathTextBox"
                                             Grid.Column="0"
                                             Padding="8,6" />
                                    <Button Grid.Column="1"
                                            Margin="8,0,0,0"
                                            Padding="12,6"
                                            Click="BrowseClonePath_Click"
                                            Content="Browse..." />
                                </Grid>
                                <TextBlock Text="New repositories will be cloned to this location by default."
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                           Margin="0,8,0,0"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Watched Folders Content -->
                    <StackPanel x:Name="ContentWatchedFolders" Visibility="Collapsed">
                        <TextBlock Text="Watched Folders"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Folders below are monitored for new Git repositories"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel>
                                <TextBlock Text="When you add a watched folder, Leaf will automatically detect new Git repositories cloned into that folder."
                                           FontSize="12"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,16" />

                                <ListBox x:Name="WatchedFoldersListBox"
                                         Height="160"
                                         Margin="0,0,0,12"
                                         BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                         BorderThickness="1">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <ic:SymbolIcon Symbol="Folder" FontSize="14" Margin="0,0,8,0" Opacity="0.7" />
                                                <TextBlock Grid.Column="1" Text="{Binding}" FontFamily="Consolas" VerticalAlignment="Center" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Add Folder..."
                                            Padding="12,6"
                                            Margin="0,0,8,0"
                                            Click="AddWatchedFolder_Click" />
                                    <Button x:Name="RemoveWatchedFolderButton"
                                            Content="Remove"
                                            Padding="12,6"
                                            Click="RemoveWatchedFolder_Click"
                                            IsEnabled="False" />
                                </StackPanel>

                                <TextBlock Text="Tip: Repositories cloned or created in watched folders will appear automatically in the sidebar."
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                           Margin="0,16,0,0"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Remotes Content -->
                    <StackPanel x:Name="ContentRemotes" Visibility="Collapsed">
                        <TextBlock Text="Remotes"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Configure behavior for repositories with multiple remotes"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel>
                                <TextBlock Text="Multi-Remote Sync"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,12" />

                                <CheckBox x:Name="SyncAllRemotesCheckBox"
                                          Margin="0,0,0,8">
                                    <CheckBox.Content>
                                        <StackPanel>
                                            <TextBlock Text="Sync all remotes automatically"
                                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                            <TextBlock Text="Push and pull will affect all configured remotes instead of showing a selection dialog"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       TextWrapping="Wrap"
                                                       Margin="0,2,0,0" />
                                        </StackPanel>
                                    </CheckBox.Content>
                                </CheckBox>

                                <TextBlock Text="When enabled, Push will send changes to all remotes and Pull will fetch from all remotes. When disabled, you'll be prompted to select which remotes to use."
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                           Margin="0,8,0,0"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Terminal Content -->
                    <StackPanel x:Name="ContentTerminal" Visibility="Collapsed">
                        <TextBlock Text="Terminal"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Configure the built-in command terminal"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <StackPanel Margin="0,0,0,14">
                            <TextBlock Text="Shell executable"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Margin="0,0,0,6" />
                            <TextBox x:Name="TerminalShellExecutableTextBox" />
                        </StackPanel>

                        <StackPanel Margin="0,0,0,14">
                            <TextBlock Text="Shell arguments template"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Margin="0,0,0,6" />
                            <TextBox x:Name="TerminalShellArgumentsTextBox" />
                            <TextBlock Text="Use {command} as a placeholder for the entered command."
                                       FontSize="11"
                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                       Margin="0,4,0,0" />
                        </StackPanel>

                        <StackPanel Margin="0,0,0,14">
                            <TextBlock Text="Max output lines"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Margin="0,0,0,6" />
                            <TextBox x:Name="TerminalMaxLinesTextBox" Width="120" />
                        </StackPanel>

                        <StackPanel Margin="0,0,0,14">
                            <TextBlock Text="Font size"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Margin="0,0,0,6" />
                            <TextBox x:Name="TerminalFontSizeTextBox" Width="120" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <CheckBox x:Name="TerminalAutoScrollCheckBox" Content="Auto-scroll output" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox x:Name="TerminalLogGitCommandsCheckBox" Content="Log Git commands from Leaf" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Auth General Content -->
                    <StackPanel x:Name="ContentAuthGeneral" Visibility="Collapsed">
                        <TextBlock Text="Authentication"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="Manage stored credentials for remote services"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,16" />

                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel>
                                <TextBlock Text="Clear All Credentials"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           Margin="0,0,0,8" />
                                <TextBlock Text="Remove all stored PATs and tokens from the Windows Credential Manager. You will need to re-enter credentials for each service after clearing."
                                           FontSize="12"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,12" />
                                <Button Content="Clear All Credentials"
                                        Padding="12,6"
                                        Click="ClearAllCredentials_Click">
                                    <Button.Style>
                                        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                                            <Setter Property="Foreground" Value="#DC2626" />
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Azure DevOps Content (UserControl) -->
                    <settings:AzureDevOpsSettingsControl x:Name="AzureDevOpsSettings" Visibility="Collapsed" />

                    <!-- GitHub Content (UserControl) -->
                    <settings:GitHubSettingsControl x:Name="GitHubSettings" Visibility="Collapsed" />

                    <!-- AI Settings Content (UserControl) -->
                    <settings:AiSettingsControl x:Name="AiSettings" Visibility="Collapsed" />

                    <!-- GitFlow Defaults Content (UserControl) -->
                    <settings:GitFlowSettingsControl x:Name="GitFlowSettings" Visibility="Collapsed" />

                    <!-- Search Results (shown when searching) -->
                    <StackPanel x:Name="ContentSearchResults" Visibility="Collapsed">
                        <TextBlock Text="Search Results"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,16" />
                        <ItemsControl x:Name="SearchResultsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Margin="0,0,0,8"
                                            Padding="12,10"
                                            HorizontalContentAlignment="Left"
                                            Click="SearchResult_Click"
                                            Tag="{Binding Tag}">
                                        <StackPanel Orientation="Horizontal">
                                            <ic:SymbolIcon Symbol="{Binding Icon}" FontSize="16" Margin="0,0,10,0" />
                                            <StackPanel>
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" />
                                                <TextBlock Text="{Binding Description}"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock x:Name="NoSearchResultsText"
                                   Text="No settings found matching your search."
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Visibility="Collapsed"
                                   Margin="0,8,0,0" />
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="1"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="24,12">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button Padding="16,8"
                            Click="Close_Click"
                            Content="Close"
                            IsCancel="True" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
