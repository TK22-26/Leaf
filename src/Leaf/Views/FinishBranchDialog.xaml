<Window x:Class="Leaf.Views.FinishBranchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ic="clr-namespace:FluentIcons.Wpf;assembly=FluentIcons.Wpf"
        xmlns:models="clr-namespace:Leaf.Models"
        Title="Finish Branch"
        Width="600"
        Height="650"
        MinWidth="500"
        MinHeight="500"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="{DynamicResource ApplicationBackgroundBrush}"
        ResizeMode="CanResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Content -->
        <ScrollViewer Grid.Row="0" Padding="24,20" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Header -->
                <StackPanel Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border x:Name="BranchTypeIndicator" Width="12" Height="12" CornerRadius="6"
                                Background="#8250DF" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock x:Name="HeaderText"
                                       Text="Finish Feature"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock x:Name="BranchNameText"
                                       Text="feature/my-feature"
                                       FontSize="13"
                                       FontFamily="Consolas"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Merge Strategy -->
                <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Merge Strategy"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,12"/>

                        <RadioButton x:Name="MergeStrategyMerge" GroupName="MergeStrategy"
                                     IsChecked="True" Margin="0,0,0,8"
                                     Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                            <StackPanel>
                                <TextBlock Text="Merge" FontWeight="SemiBold"/>
                                <TextBlock Text="Creates a merge commit preserving full branch history"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton x:Name="MergeStrategySquash" GroupName="MergeStrategy"
                                     Margin="0,0,0,8"
                                     Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                            <StackPanel>
                                <TextBlock Text="Squash" FontWeight="SemiBold"/>
                                <TextBlock Text="Combines all commits into a single commit"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton x:Name="MergeStrategyRebase" GroupName="MergeStrategy"
                                     Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                            <StackPanel>
                                <TextBlock Text="Rebase" FontWeight="SemiBold"/>
                                <TextBlock Text="Replays commits on top of the target branch"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                </Border>

                <!-- Tag Options (for release/hotfix) -->
                <Border x:Name="TagOptionsSection"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,0,0,16"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Version Tag"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="A tag will be created for this release"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,12"/>

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Tag Name:"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"/>
                            <TextBox x:Name="TagNameTextBox" Grid.Column="1"
                                     Padding="10,8" IsReadOnly="True"
                                     Background="{DynamicResource ControlFillColorDefaultBrush}"/>
                        </Grid>

                        <TextBlock Text="Tag Message (optional)"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,0,0,8"/>
                        <TextBox x:Name="TagMessageTextBox"
                                 Padding="10,8"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="60"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </Border>

                <!-- Changelog (for release/hotfix) -->
                <Border x:Name="ChangelogSection"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,0,0,16"
                        Visibility="Collapsed">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Changelog"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBlock Text="Preview of changes for this release"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                            <Button x:Name="RefreshChangelogButton" Grid.Column="1"
                                    Click="RefreshChangelog_Click"
                                    Padding="10,6">
                                <StackPanel Orientation="Horizontal">
                                    <ic:SymbolIcon Symbol="ArrowSync" FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="Refresh"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                                CornerRadius="6"
                                Padding="12"
                                MaxHeight="200">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock x:Name="ChangelogPreviewText"
                                           Text="Loading changelog..."
                                           FontFamily="Consolas"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                           TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </Border>

                        <CheckBox x:Name="AppendToChangelogCheckBox"
                                  Content="Append to CHANGELOG.md"
                                  IsChecked="True"
                                  Margin="0,12,0,0"
                                  Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Options -->
                <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Options"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Margin="0,0,0,12"/>

                        <CheckBox x:Name="DeleteBranchCheckBox"
                                  IsChecked="True"
                                  Margin="0,0,0,8"
                                  Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                            <StackPanel>
                                <TextBlock Text="Delete branch after finish"/>
                                <TextBlock Text="Remove the feature/release/hotfix branch after merging"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                            </StackPanel>
                        </CheckBox>

                        <CheckBox x:Name="PushCheckBox"
                                  IsChecked="False"
                                  Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                            <StackPanel>
                                <TextBlock Text="Push changes to remote"/>
                                <TextBlock x:Name="PushDescriptionText"
                                           Text="Push merged changes to origin"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                            </StackPanel>
                        </CheckBox>
                    </StackPanel>
                </Border>

                <!-- Merge Info -->
                <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                        CornerRadius="6"
                        Padding="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <ic:SymbolIcon Symbol="Info" FontSize="16"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Margin="0,0,10,0" VerticalAlignment="Top"/>
                        <TextBlock x:Name="MergeInfoText" Grid.Column="1"
                                   Text="This feature will be merged into develop."
                                   FontSize="12" TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </Grid>
                </Border>

                <!-- Progress Section -->
                <StackPanel x:Name="ProgressSection" Visibility="Collapsed" Margin="0,16,0,0">
                    <ProgressBar x:Name="ProgressBar" IsIndeterminate="True" Height="4"/>
                    <TextBlock x:Name="ProgressText"
                               Text="Finishing branch..."
                               FontSize="12"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="1"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Cancel"
                            Padding="20,10"
                            IsCancel="True"
                            Click="Cancel_Click"/>
                    <Button x:Name="FinishButton"
                            Content="Finish Branch"
                            Margin="12,0,0,0"
                            Padding="24,10"
                            Click="Finish_Click"
                            Background="{DynamicResource AccentFillColorDefaultBrush}"
                            Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
