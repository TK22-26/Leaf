<UserControl x:Class="Leaf.Views.GitGraphView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Leaf.Controls"
             xmlns:converters="clr-namespace:Leaf.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Fixed row height for perfect alignment -->
        <sys:Double x:Key="RowHeight" xmlns:sys="clr-namespace:System;assembly=mscorlib">28</sys:Double>
        <!-- Trail/highlight height: NodeRadius(5) * 3.75 + 4 = 22.75, rounded to 23 -->
        <sys:Double x:Key="TrailHeight" xmlns:sys="clr-namespace:System;assembly=mscorlib">23</sys:Double>
        <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter"/>
        <!-- Leaf green accent colors -->
        <SolidColorBrush x:Key="LeafAccentHoverBrush" Color="#3328A745"/>
        <SolidColorBrush x:Key="LeafAccentSelectedBrush" Color="#5528A745"/>
        <!-- Working changes amber accent colors -->
        <SolidColorBrush x:Key="WorkingChangesHoverBrush" Color="#33FFB900"/>
        <SolidColorBrush x:Key="WorkingChangesSelectedBrush" Color="#55FFB900"/>
    </UserControl.Resources>

    <Grid>
        <!-- Loading overlay -->
        <Border Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}"
                Panel.ZIndex="100">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                <TextBlock Text="Loading commits..."
                           Margin="0,8,0,0"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
            </StackPanel>
        </Border>

        <!-- Error message -->
        <Border Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}, FallbackValue=Collapsed}"
                Padding="16">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="#E81123"/>
        </Border>

        <!-- Main content: Single ScrollViewer containing graph + commit list -->
        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      x:Name="MainScrollViewer">
            <Grid Margin="0,0,0,28">
                <Grid.ColumnDefinitions>
                    <!-- Graph canvas column (auto width based on lanes) -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Commit list column (fills remaining space) -->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Git Graph Canvas -->
                <controls:GitGraphCanvas Grid.Column="0"
                                          x:Name="GraphCanvas"
                                          Nodes="{Binding Nodes}"
                                          MaxLane="{Binding MaxLane}"
                                          SelectedSha="{Binding SelectedSha}"
                                          HoveredSha="{Binding HoveredSha, Mode=TwoWay}"
                                          IsSearchActive="{Binding IsSearchActive}"
                                          HasWorkingChanges="{Binding HasWorkingChanges}"
                                          IsWorkingChangesSelected="{Binding IsWorkingChangesSelected}"
                                          RowHeight="{StaticResource RowHeight}"
                                          Height="{Binding TotalHeight}"
                                          MinWidth="80"
                                          MouseLeftButtonDown="GraphCanvas_MouseLeftButtonDown"/>

                <!-- Commit List with Working Changes row -->
                <StackPanel Grid.Column="1" Height="{Binding TotalHeight}">
                    <!-- Working Changes Row (shown when HasWorkingChanges is true) -->
                    <Border x:Name="WorkingChangesRow"
                            Height="{StaticResource RowHeight}"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Visibility="{Binding HasWorkingChanges, Converter={StaticResource BoolToVisibilityConverter}}"
                            MouseLeftButtonDown="WorkingChangesRow_MouseLeftButtonDown"
                            MouseEnter="WorkingChangesRow_MouseEnter"
                            MouseLeave="WorkingChangesRow_MouseLeave">
                        <Grid>
                            <!-- Highlight background -->
                            <Border x:Name="WorkingChangesHighlight"
                                    Height="{StaticResource TrailHeight}"
                                    VerticalAlignment="Center"
                                    Background="Transparent"/>
                            <!-- Content -->
                            <StackPanel Orientation="Horizontal" Margin="8,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding WorkingChanges.Summary}"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Commit List (ItemsControl for fixed height rows, no internal scrolling) -->
                    <ItemsControl ItemsSource="{Binding Commits}"
                                  x:Name="CommitList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="RowContainer"
                                    Height="{StaticResource RowHeight}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="CommitItem_MouseLeftButtonDown"
                                    MouseEnter="CommitItem_MouseEnter"
                                    MouseLeave="CommitItem_MouseLeave">
                                <Grid>
                                    <!-- Highlight background (matches trail height, extends to edge) -->
                                    <Border x:Name="HighlightBorder"
                                            Height="{StaticResource TrailHeight}"
                                            VerticalAlignment="Center"
                                            Background="Transparent"/>
                                    <!-- Content -->
                                    <StackPanel Orientation="Horizontal" Margin="8,0,0,0" VerticalAlignment="Center"
                                                Opacity="{Binding IsDimmed, Converter={StaticResource BoolToOpacityConverter}}">
                                        <!-- Commit message (secondary color) -->
                                        <TextBlock Text="{Binding MessageShort}"
                                                   TextTrimming="CharacterEllipsis"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   Margin="0,0,16,0"/>

                                        <!-- Commit description (tertiary color) -->
                                        <TextBlock Text="{Binding Description}"
                                                   TextTrimming="CharacterEllipsis"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <DataTemplate.Triggers>
                                <!-- Hover: subtle green highlight -->
                                <Trigger SourceName="RowContainer" Property="IsMouseOver" Value="True">
                                    <Setter TargetName="HighlightBorder" Property="Background" Value="{StaticResource LeafAccentHoverBrush}"/>
                                </Trigger>
                                <!-- Selected or search match: stronger green highlight -->
                                <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                    <Setter TargetName="HighlightBorder" Property="Background" Value="{StaticResource LeafAccentSelectedBrush}"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
