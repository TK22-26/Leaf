<UserControl x:Class="Leaf.Views.MergeStatusView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ic="clr-namespace:FluentIcons.Wpf;assembly=FluentIcons.Wpf"
             xmlns:viewmodels="clr-namespace:Leaf.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300"
             x:Name="MergeStatusRoot"
             d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}">
    <UserControl.Resources>
        <Style x:Key="MergeActionButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0,8"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="24,32,24,16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <ic:SymbolIcon Symbol="Merge" FontSize="24" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <TextBlock Text="Merge in Progress" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Margin="12,0,0,0"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                </StackPanel>
                <TextBlock Foreground="{DynamicResource TextFillColorSecondaryBrush}" TextWrapping="Wrap">
                    <Run Text="Merging"/>
                    <Run Text="{Binding SelectedRepository.MergingBranch, Mode=OneWay}" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <Run Text="into"/>
                    <Run Text="{Binding SelectedRepository.CurrentBranch, Mode=OneWay}" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Status & Info -->
        <Border Grid.Row="1" Padding="24,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="1"
                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                        CornerRadius="4"
                        Padding="8"
                        Margin="0,0,0,16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Margin="4,0,0,8">
                            <TextBlock FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                                <Run Text="Conflicted Files ("/>
                                <Run Text="{Binding MergeConflictResolutionViewModel.ConflictedConflicts.Count, Mode=OneWay, TargetNullValue=0}"/>
                                <Run Text=")"/>
                            </TextBlock>
                            <Border BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                    BorderThickness="0,0,0,1"
                                    Margin="0,6,0,0"/>
                        </StackPanel>
                        <ListBox Grid.Row="1"
                                 ItemsSource="{Binding MergeConflictResolutionViewModel.ConflictedConflicts}"
                                 SelectedItem="{Binding MergeConflictResolutionViewModel.SelectedConflict}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="8,6"/>
                                    <Setter Property="Margin" Value="2"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="Border"
                                                        Background="Transparent"
                                                        CornerRadius="4"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource ControlFillColorTertiaryBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding FileName}"
                                                       FontWeight="SemiBold"
                                                       TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding FilePath}"/>
                                            <TextBlock Text="{Binding FilePath}"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       FontSize="11"
                                                       TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding FilePath}"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1"
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Center"
                                                    Visibility="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsMouseOver, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <Button Command="{Binding DataContext.OpenConflictInLeafCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Padding="6,2"
                                                    Margin="0,0,6,0"
                                                    ToolTip="Resolve in Leaf">
                                                <ic:SymbolIcon Symbol="Edit" FontSize="12"/>
                                            </Button>
                                            <Button Command="{Binding DataContext.OpenConflictInVsCodeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Padding="6,2"
                                                    ToolTip="Resolve in VS Code">
                                                <ic:SymbolIcon Symbol="Code" FontSize="12"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <Border Grid.Row="2"
                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                        CornerRadius="4"
                        Padding="8"
                        Margin="0,0,0,16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Margin="4,0,0,8">
                            <TextBlock FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                                <Run Text="Resolved Files ("/>
                                <Run Text="{Binding MergeConflictResolutionViewModel.ResolvedConflicts.Count, Mode=OneWay, TargetNullValue=0}"/>
                                <Run Text=")"/>
                            </TextBlock>
                            <Border BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                    BorderThickness="0,0,0,1"
                                    Margin="0,6,0,0"/>
                        </StackPanel>
                        <ListBox Grid.Row="1"
                                 ItemsSource="{Binding MergeConflictResolutionViewModel.ResolvedConflicts}"
                                 SelectedItem="{Binding MergeConflictResolutionViewModel.SelectedConflict}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="8,6"/>
                                    <Setter Property="Margin" Value="2"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Tag" Value="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                    <Setter Property="ContextMenu">
                                        <Setter.Value>
                                            <ContextMenu>
                                                <MenuItem Header="Move to Conflicted"
                                                          Command="{Binding PlacementTarget.Tag.UnresolveMergeConflictCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                          CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                          IsEnabled="{Binding PlacementTarget.DataContext.IsResolved, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                            </ContextMenu>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="Border"
                                                        Background="Transparent"
                                                        CornerRadius="4"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource ControlFillColorTertiaryBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding FileName}"
                                                   FontWeight="SemiBold"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding FilePath}"/>
                                        <TextBlock Text="{Binding FilePath}"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   FontSize="11"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding FilePath}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Actions -->
        <Border Grid.Row="2" Padding="24" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Command="{Binding MergeConflictResolutionViewModel.CompleteMergeCommand}"
                        IsEnabled="{Binding MergeConflictResolutionViewModel.CanCompleteMerge}"
                        Margin="0,0,12,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MergeActionButtonStyle}">
                            <Setter Property="Background" Value="#16A34A"/>
                            <Setter Property="BorderBrush" Value="#22C55E"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="{DynamicResource ControlFillColorDisabledBrush}"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDisabledBrush}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource TextFillColorDisabledBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <ic:SymbolIcon Symbol="Checkmark" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Approve"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="1"
                        Command="{Binding AbortMergeCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MergeActionButtonStyle}">
                            <Setter Property="Background" Value="#DC2626"/>
                            <Setter Property="BorderBrush" Value="#F87171"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <ic:SymbolIcon Symbol="Dismiss" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Abort"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
