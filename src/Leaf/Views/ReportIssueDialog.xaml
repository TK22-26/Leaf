<Window x:Class="Leaf.Views.ReportIssueDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ic="clr-namespace:FluentIcons.Wpf;assembly=FluentIcons.Wpf"
        Title="Report an Issue"
        Width="550"
        Height="480"
        MinWidth="450"
        MinHeight="400"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource ApplicationBackgroundBrush}"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal">
                <ic:SymbolIcon Symbol="Bug" FontSize="24"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                               Margin="0,0,12,0"/>
                <TextBlock Text="Report an Issue"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
            </StackPanel>
            <TextBlock Text="Submit an issue directly to the Leaf GitHub repository"
                       FontSize="12"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       Margin="36,4,0,0"/>
        </StackPanel>

        <!-- Title -->
        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <TextBlock Text="Title"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                       Margin="0,0,0,6"/>
            <TextBox x:Name="TitleTextBox"
                     TextChanged="TitleTextBox_TextChanged"/>
        </StackPanel>

        <!-- Body Label -->
        <TextBlock Grid.Row="2"
                   Text="Description"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                   Margin="0,0,0,6"/>

        <!-- Body -->
        <TextBox x:Name="BodyTextBox"
                 Grid.Row="3"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 VerticalContentAlignment="Top"
                 Text="{Binding BodyTemplate, Mode=OneTime}"/>

        <!-- Status Message -->
        <Border x:Name="StatusBorder"
                Grid.Row="4"
                Margin="0,12,0,0"
                Padding="10,8"
                CornerRadius="4"
                Visibility="Collapsed">
            <StackPanel Orientation="Horizontal">
                <ic:SymbolIcon x:Name="StatusIcon" FontSize="14" Margin="0,0,8,0"/>
                <TextBlock x:Name="StatusText"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <Grid Grid.Row="5" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- GitHub CLI info -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <ic:SymbolIcon Symbol="Info" FontSize="12"
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                               Margin="0,0,6,0"/>
                <TextBlock Text="Requires GitHub CLI (gh)"
                           FontSize="11"
                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <Button Grid.Column="2"
                    Content="Cancel"
                    Padding="16,8"
                    Margin="0,0,8,0"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
            <Button x:Name="SubmitButton"
                    Grid.Column="3"
                    Padding="16,8"
                    IsEnabled="False"
                    Click="SubmitButton_Click"
                    Background="{DynamicResource AccentFillColorDefaultBrush}"
                    Foreground="White">
                <StackPanel Orientation="Horizontal">
                    <ic:SymbolIcon Symbol="Send" FontSize="14" Margin="0,0,8,0"/>
                    <TextBlock Text="Submit Issue"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
