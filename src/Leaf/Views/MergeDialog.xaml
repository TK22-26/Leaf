<Window x:Class="Leaf.Views.MergeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:Leaf.ViewModels"
        xmlns:models="clr-namespace:Leaf.Models"
        xmlns:converters="clr-namespace:Leaf.Converters"
        xmlns:ic="clr-namespace:FluentIcons.Wpf;assembly=FluentIcons.Wpf"
        d:DataContext="{d:DesignInstance Type=viewmodels:MergeDialogViewModel}"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding DialogTitle}"
        Height="480"
        Width="500"
        MinHeight="420"
        MinWidth="400"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="CanResize">

    <Window.Resources>
        <converters:EnumBooleanConverter x:Key="EnumBooleanConverter" />
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="{Binding DialogTitle}"
                       FontSize="20"
                       FontWeight="SemiBold"/>
        </StackPanel>

        <!-- Branch Info -->
        <Border Grid.Row="1"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                CornerRadius="4"
                Padding="12"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Merge From -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Merge:"
                           FontWeight="SemiBold"
                           Margin="0,0,8,4"/>
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                    <ic:SymbolIcon Symbol="BranchFork" FontSize="14" Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding SourceBranch}"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                </StackPanel>

                <!-- Merge Into -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Into:"
                           FontWeight="SemiBold"
                           Margin="0,4,8,0"/>
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,4,0,0">
                    <ic:SymbolIcon Symbol="BranchFork" FontSize="14" Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding TargetBranch}"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <TextBlock Text=" (current)"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Merge Type Selection -->
        <StackPanel Grid.Row="2" Margin="0,0,0,16">
            <TextBlock Text="Merge strategy"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>

            <RadioButton Content="Normal merge"
                         IsChecked="{Binding SelectedMergeType, Converter={StaticResource EnumBooleanConverter}, ConverterParameter={x:Static models:MergeType.Normal}}"
                         Margin="0,0,0,4"/>
            <TextBlock Text="Preserves commit history from the source branch"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       FontSize="11"
                       Margin="20,0,0,8"/>

            <RadioButton Content="Squash merge"
                         IsChecked="{Binding SelectedMergeType, Converter={StaticResource EnumBooleanConverter}, ConverterParameter={x:Static models:MergeType.Squash}}"
                         Margin="0,0,0,4"/>
            <TextBlock Text="Combines all commits into a single commit"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       FontSize="11"
                       Margin="20,0,0,8"/>

            <RadioButton Content="Fast-forward only"
                         IsChecked="{Binding SelectedMergeType, Converter={StaticResource EnumBooleanConverter}, ConverterParameter={x:Static models:MergeType.FastForwardOnly}}"
                         Margin="0,0,0,4"/>
            <TextBlock Text="Only succeeds if the branch can be fast-forwarded"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       FontSize="11"
                       Margin="20,0,0,0"/>
        </StackPanel>

        <!-- Commit Message (only for squash merge) -->
        <Grid Grid.Row="3">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSquashMerge}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="Commit message"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>

            <TextBox Grid.Row="1"
                     x:Name="CommitMessageTextBox"
                     Text="{Binding CommitMessage, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     FontFamily="Consolas"
                     Padding="8"/>
        </Grid>

        <!-- Footer buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Cancel"
                    Padding="16,8"
                    IsCancel="True"
                    Click="Cancel_Click"/>
            <Button x:Name="MergeButton"
                    Content="{Binding MergeButtonText}"
                    Padding="16,8"
                    Margin="8,0,0,0"
                    IsDefault="True"
                    IsEnabled="{Binding CanMerge}"
                    Click="Merge_Click"/>
        </StackPanel>
    </Grid>
</Window>
