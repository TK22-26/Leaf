<Window x:Class="Leaf.Views.CloneDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:Leaf.Converters"
        xmlns:ic="clr-namespace:FluentIcons.Wpf;assembly=FluentIcons.Wpf"
        Title="Clone Repository"
        Height="750"
        Width="850"
        MinHeight="650"
        MinWidth="700"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="{DynamicResource ApplicationBackgroundBrush}"
        ResizeMode="CanResize">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>

        <!-- Source button style -->
        <Style x:Key="SourceButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Repository list item style -->
        <Style x:Key="RepoListItemStyle" TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar - Source Selection -->
        <Border Grid.Column="0"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="16,16,16,8">
                    <TextBlock Text="Clone Repository"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    <TextBlock Text="Select a source to browse"
                               FontSize="12"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Source Buttons -->
                <StackPanel Grid.Row="1" Margin="8,8,8,16">
                    <TextBlock Text="SOURCES"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                               Margin="8,0,0,8"/>

                    <!-- GitHub -->
                    <Button x:Name="GitHubSourceButton"
                            Style="{StaticResource SourceButtonStyle}"
                            Click="GitHubSource_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Width="32" Height="32" CornerRadius="6"
                                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                                    Margin="0,0,12,0">
                                <Viewbox Width="16" Height="16">
                                    <Path Style="{StaticResource GitHubLogoPath}"/>
                                </Viewbox>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="GitHub"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBlock x:Name="GitHubSourceStatus"
                                           Text="Browse your repositories"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                            <ic:SymbolIcon Grid.Column="2" Symbol="ChevronRight" FontSize="12"
                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                           VerticalAlignment="Center"/>
                        </Grid>
                    </Button>

                    <!-- Azure DevOps -->
                    <Button x:Name="AzureSourceButton"
                            Style="{StaticResource SourceButtonStyle}"
                            Click="AzureSource_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Width="32" Height="32" CornerRadius="6"
                                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                                    Margin="0,0,12,0">
                                <Viewbox Width="16" Height="16">
                                    <Path Style="{StaticResource AzureDevOpsLogoPath}"/>
                                </Viewbox>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Azure DevOps"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBlock x:Name="AzureSourceStatus"
                                           Text="Browse organization repos"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                            <ic:SymbolIcon Grid.Column="2" Symbol="ChevronRight" FontSize="12"
                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                           VerticalAlignment="Center"/>
                        </Grid>
                    </Button>

                    <!-- URL -->
                    <Button x:Name="UrlSourceButton"
                            Style="{StaticResource SourceButtonStyle}"
                            Click="UrlSource_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Width="32" Height="32" CornerRadius="6"
                                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                                    Margin="0,0,12,0">
                                <ic:SymbolIcon Symbol="Link" FontSize="16"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="URL"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                <TextBlock Text="Enter a repository URL"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                            <ic:SymbolIcon Grid.Column="2" Symbol="ChevronRight" FontSize="12"
                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                           VerticalAlignment="Center"/>
                        </Grid>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Right Content Panel -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Main Content Area -->
            <Grid Grid.Row="0" Margin="24,16,24,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- GitHub Content -->
                <Grid x:Name="GitHubContent" Grid.Row="0" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="GitHub Repositories"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock x:Name="GitHubStatusText"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <Button Grid.Column="1" x:Name="GitHubRefreshButton"
                                Click="GitHubRefresh_Click"
                                Padding="10,6"
                                VerticalAlignment="Top">
                            <StackPanel Orientation="Horizontal">
                                <ic:SymbolIcon Symbol="ArrowSync" FontSize="14" Margin="0,0,6,0"/>
                                <TextBlock Text="Refresh"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Search Box -->
                    <Grid Grid.Row="1" Margin="0,0,0,12">
                        <TextBox x:Name="GitHubSearchTextBox"
                                 Padding="32,8,8,8"
                                 TextChanged="GitHubSearchTextBox_TextChanged"/>
                        <ic:SymbolIcon Symbol="Search"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       IsHitTestVisible="False"/>
                        <TextBlock x:Name="GitHubSearchPlaceholder"
                                   Text="Search repositories..."
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="34,0,0,0"
                                   IsHitTestVisible="False"/>
                    </Grid>

                    <!-- Repository List -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                        <Grid>
                            <ListBox x:Name="GitHubRepoListBox"
                                     SelectionChanged="GitHubRepoListBox_SelectionChanged"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     ItemContainerStyle="{StaticResource RepoListItemStyle}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Width="36" Height="36" CornerRadius="6"
                                                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                                                    Margin="0,0,12,0">
                                                <Viewbox Width="16" Height="16">
                                                    <Path Style="{StaticResource GitHubLogoPath}"/>
                                                </Viewbox>
                                            </Border>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding DisplayName}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding RemoteUrl}"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <!-- Loading Overlay -->
                            <Border x:Name="GitHubLoadingOverlay"
                                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                    CornerRadius="8"
                                    Visibility="Collapsed">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <ProgressBar IsIndeterminate="True" Width="200" Height="3"/>
                                    <TextBlock Text="Loading repositories..."
                                               HorizontalAlignment="Center"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               Margin="0,12,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Empty State -->
                            <Border x:Name="GitHubEmptyState" Visibility="Collapsed">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="24">
                                    <Border Width="64" Height="64" CornerRadius="32"
                                            Background="{DynamicResource ControlFillColorDefaultBrush}"
                                            HorizontalAlignment="Center"
                                            Margin="0,0,0,16">
                                        <Viewbox Width="28" Height="28" Opacity="0.5">
                                            <Path Style="{StaticResource GitHubLogoPath}"/>
                                        </Viewbox>
                                    </Border>
                                    <TextBlock x:Name="GitHubEmptyStateText"
                                               Text="No repositories found"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                    <Button Margin="0,12,0,0"
                                            Padding="16,8"
                                            HorizontalAlignment="Center"
                                            Click="OpenSettings_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <ic:SymbolIcon Symbol="Settings" FontSize="14" Margin="0,0,8,0"/>
                                            <TextBlock Text="Open Settings"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Azure DevOps Content -->
                <Grid x:Name="AzureContent" Grid.Row="0" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Azure DevOps Repositories"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock x:Name="AzureStatusText"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <Button Grid.Column="1" x:Name="RefreshButton"
                                Click="Refresh_Click"
                                Padding="10,6"
                                VerticalAlignment="Top">
                            <StackPanel Orientation="Horizontal">
                                <ic:SymbolIcon Symbol="ArrowSync" FontSize="14" Margin="0,0,6,0"/>
                                <TextBlock Text="Refresh"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Search Box -->
                    <Grid Grid.Row="1" Margin="0,0,0,12">
                        <TextBox x:Name="SearchTextBox"
                                 Padding="32,8,8,8"
                                 TextChanged="SearchTextBox_TextChanged"/>
                        <ic:SymbolIcon Symbol="Search"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       IsHitTestVisible="False"/>
                        <TextBlock x:Name="SearchPlaceholder"
                                   Text="Search repositories..."
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="34,0,0,0"
                                   IsHitTestVisible="False"/>
                    </Grid>

                    <!-- Repository List -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                        <Grid>
                            <ListBox x:Name="RepoListBox"
                                     SelectionChanged="RepoListBox_SelectionChanged"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     ItemContainerStyle="{StaticResource RepoListItemStyle}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Width="36" Height="36" CornerRadius="6"
                                                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                                                    Margin="0,0,12,0">
                                                <Viewbox Width="16" Height="16">
                                                    <Path Style="{StaticResource AzureDevOpsLogoPath}"/>
                                                </Viewbox>
                                            </Border>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding DisplayName}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding RemoteUrl}"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <!-- Loading Overlay -->
                            <Border x:Name="LoadingOverlay"
                                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                    CornerRadius="8"
                                    Visibility="Collapsed">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <ProgressBar IsIndeterminate="True" Width="200" Height="3"/>
                                    <TextBlock Text="Loading repositories..."
                                               HorizontalAlignment="Center"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               Margin="0,12,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Empty State -->
                            <Border x:Name="EmptyState" Visibility="Collapsed">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="24">
                                    <Border Width="64" Height="64" CornerRadius="32"
                                            Background="{DynamicResource ControlFillColorDefaultBrush}"
                                            HorizontalAlignment="Center"
                                            Margin="0,0,0,16">
                                        <Viewbox Width="28" Height="28" Opacity="0.5">
                                            <Path Style="{StaticResource AzureDevOpsLogoPath}"/>
                                        </Viewbox>
                                    </Border>
                                    <TextBlock x:Name="EmptyStateText"
                                               Text="No repositories found"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                    <Button Margin="0,12,0,0"
                                            Padding="16,8"
                                            HorizontalAlignment="Center"
                                            Click="OpenSettings_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <ic:SymbolIcon Symbol="Settings" FontSize="14" Margin="0,0,8,0"/>
                                            <TextBlock Text="Open Settings"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

                <!-- URL Content -->
                <Grid x:Name="UrlContent" Grid.Row="0" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,16">
                        <TextBlock Text="Clone from URL"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Text="Enter a Git repository URL to clone"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- URL Input Card -->
                    <Border Grid.Row="1"
                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="20"
                            VerticalAlignment="Top">
                        <StackPanel>
                            <TextBlock Text="Repository URL"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                       Margin="0,0,0,8"/>
                            <Grid>
                                <TextBox x:Name="UrlTextBox"
                                         Padding="32,8,8,8"
                                         TextChanged="UrlTextBox_TextChanged"/>
                                <ic:SymbolIcon Symbol="Link"
                                               FontSize="14"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0"
                                               IsHitTestVisible="False"/>
                            </Grid>
                            <TextBlock x:Name="UrlHintText"
                                       Text="Enter a Git repository URL (HTTPS or SSH)"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                       Margin="0,8,0,0"
                                       TextWrapping="Wrap"/>

                            <!-- URL Examples -->
                            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                                    CornerRadius="6"
                                    Padding="12"
                                    Margin="0,16,0,0">
                                <StackPanel>
                                    <TextBlock Text="Examples:"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="https://github.com/user/repo.git"
                                               FontSize="11"
                                               FontFamily="Consolas"
                                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="https://dev.azure.com/org/project/_git/repo"
                                               FontSize="11"
                                               FontFamily="Consolas"
                                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Clone Options (always visible at bottom) -->
                <Border Grid.Row="1"
                        Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        Margin="0,16,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Selected Repository -->
                        <Grid x:Name="SelectedRepoSection" Grid.Row="0" Margin="0,0,0,12"
                              Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Width="40" Height="40" CornerRadius="8"
                                    Background="{DynamicResource AccentFillColorDefaultBrush}"
                                    Margin="0,0,12,0">
                                <Grid>
                                    <!-- GitHub icon -->
                                    <Viewbox x:Name="SelectedRepoGitHubIcon" Width="18" Height="18">
                                        <Path Data="{StaticResource GitHubLogoGeometry}"
                                              Fill="White" Stretch="Uniform"/>
                                    </Viewbox>
                                    <!-- Azure DevOps icon -->
                                    <Viewbox x:Name="SelectedRepoAzureIcon" Width="18" Height="18" Visibility="Collapsed">
                                        <Path Data="{StaticResource AzureDevOpsLogoGeometry}"
                                              Fill="White" Stretch="Uniform"/>
                                    </Viewbox>
                                    <!-- Cloud icon (fallback for URL) -->
                                    <ic:SymbolIcon x:Name="SelectedRepoCloudIcon" Symbol="Cloud" FontSize="18"
                                                   Foreground="White" Visibility="Collapsed"/>
                                </Grid>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Selected Repository"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                                <TextBlock x:Name="SelectedUrlText"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </Grid>

                        <!-- Clone To -->
                        <StackPanel Grid.Row="1">
                            <TextBlock Text="Clone to"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                       Margin="0,0,0,8"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid>
                                    <TextBox x:Name="DestinationTextBox"
                                             Padding="32,8,8,8"
                                             TextChanged="DestinationTextBox_TextChanged"/>
                                    <ic:SymbolIcon Symbol="Folder"
                                                   FontSize="14"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0,0,0"
                                                   IsHitTestVisible="False"/>
                                </Grid>
                                <Button Grid.Column="1"
                                        Margin="8,0,0,0"
                                        Padding="12,8"
                                        Click="BrowseDestination_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <ic:SymbolIcon Symbol="FolderOpen" FontSize="14" Margin="0,0,6,0"/>
                                        <TextBlock Text="Browse"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                            <TextBlock x:Name="RepoNameText"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                       Margin="0,6,0,0"/>
                        </StackPanel>

                        <!-- Progress -->
                        <StackPanel x:Name="CloneProgressSection" Grid.Row="2" Margin="0,12,0,0" Visibility="Collapsed">
                            <ProgressBar x:Name="CloneProgressBar"
                                         Height="4"
                                         IsIndeterminate="True"/>
                            <TextBlock x:Name="ProgressText"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="1"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left side info -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <ic:SymbolIcon x:Name="FooterInfoIcon" Symbol="Info" FontSize="14"
                                       Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                       Margin="0,0,8,0"
                                       Visibility="Collapsed"/>
                        <TextBlock x:Name="FooterInfoText"
                                   FontSize="11"
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="Cancel"
                                Padding="20,10"
                                IsCancel="True"
                                Click="Cancel_Click"/>
                        <Button x:Name="CloneButton"
                                Margin="12,0,0,0"
                                Padding="24,10"
                                IsDefault="True"
                                Click="Clone_Click"
                                Background="{DynamicResource AccentFillColorDefaultBrush}"
                                Foreground="White">
                            <StackPanel Orientation="Horizontal">
                                <ic:SymbolIcon Symbol="ArrowDownload" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Clone"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
