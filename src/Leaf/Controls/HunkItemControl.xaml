<UserControl x:Class="Leaf.Controls.HunkItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:Leaf.Converters"
             xmlns:models="clr-namespace:Leaf.Models"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <!-- Line colors matching existing theme -->
        <SolidColorBrush x:Key="AddedLineBrush" Color="#14532D" />
        <SolidColorBrush x:Key="DeletedLineBrush" Color="#5F1E1E" />
        <SolidColorBrush x:Key="ContextLineBrush" Color="Transparent" />
        <SolidColorBrush x:Key="LineNumberBrush" Color="#6B7280" />
        <SolidColorBrush x:Key="HunkHeaderBrush" Color="#0AFFFFFF" />

        <SolidColorBrush x:Key="AddedCountBrush" Color="#28A745" />
        <SolidColorBrush x:Key="DeletedCountBrush" Color="#E81123" />

        <Style x:Key="HunkActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDefaultBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ControlFillColorTertiaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RevertButtonStyle" TargetType="Button" BasedOn="{StaticResource HunkActionButtonStyle}">
            <Setter Property="BorderBrush" Value="#8B5CF6"/>
            <Setter Property="Foreground" Value="#A78BFA"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2E1065"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StageButtonStyle" TargetType="Button" BasedOn="{StaticResource HunkActionButtonStyle}">
            <Setter Property="BorderBrush" Value="#28A745"/>
            <Setter Property="Foreground" Value="#4ADE80"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#14532D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="#25FFFFFF"
            BorderThickness="1"
            CornerRadius="8"
            Margin="0,0,0,12"
            Background="#08FFFFFF">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Hunk header -->
            <Border Grid.Row="0"
                    Background="{StaticResource HunkHeaderBrush}"
                    CornerRadius="7,7,0,0"
                    Padding="12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Hunk header text -->
                        <TextBlock FontFamily="Consolas"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                   Text="{Binding Header}"
                                   VerticalAlignment="Center"/>

                        <!-- Context (function name) -->
                        <TextBlock FontFamily="Consolas"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Text="{Binding Context}"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding Context, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <!-- Stats -->
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock FontFamily="Consolas"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource AddedCountBrush}"
                                       Text="+"/>
                            <TextBlock FontSize="11"
                                       Foreground="{StaticResource AddedCountBrush}"
                                       Text="{Binding LinesAdded}"
                                       Margin="2,0,8,0"/>
                            <TextBlock FontFamily="Consolas"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DeletedCountBrush}"
                                       Text="-"/>
                            <TextBlock FontSize="11"
                                       Foreground="{StaticResource DeletedCountBrush}"
                                       Text="{Binding LinesDeleted}"
                                       Margin="2,0,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Action buttons -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="StageButton"
                                Content="Stage Hunk"
                                Style="{StaticResource StageButtonStyle}"
                                Click="StageButton_Click"
                                Margin="0,0,8,0"
                                Visibility="{Binding ShowStageButton, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <Button x:Name="RevertButton"
                                Content="Revert Hunk"
                                Style="{StaticResource RevertButtonStyle}"
                                Click="RevertButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Hunk lines -->
            <Border Grid.Row="1"
                    Background="Transparent"
                    CornerRadius="0,0,8,8">
            <ScrollViewer x:Name="LinesScrollViewer"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled"
                          MaxHeight="400"
                          PreviewMouseWheel="LinesScrollViewer_PreviewMouseWheel">
                <ItemsControl ItemsSource="{Binding Lines}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:DiffLine}">
                            <Grid>
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Background" Value="{StaticResource ContextLineBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Type}" Value="Added">
                                                <Setter Property="Background" Value="{StaticResource AddedLineBrush}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Type}" Value="Deleted">
                                                <Setter Property="Background" Value="{StaticResource DeletedLineBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48"/>
                                    <ColumnDefinition Width="48"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="24"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Old line number -->
                                <TextBlock Grid.Column="0"
                                           FontFamily="Consolas"
                                           FontSize="11"
                                           Foreground="{StaticResource LineNumberBrush}"
                                           Text="{Binding OldLineNumber}"
                                           TextAlignment="Right"
                                           Padding="4,2,6,2"
                                           Opacity="0.7"/>

                                <!-- New line number -->
                                <TextBlock Grid.Column="1"
                                           FontFamily="Consolas"
                                           FontSize="11"
                                           Foreground="{StaticResource LineNumberBrush}"
                                           Text="{Binding NewLineNumber}"
                                           TextAlignment="Right"
                                           Padding="4,2,6,2"
                                           Opacity="0.7"/>

                                <!-- Separator -->
                                <Border Grid.Column="2"
                                        Width="1"
                                        Background="#18FFFFFF"
                                        Margin="0,2"/>

                                <!-- Change indicator -->
                                <TextBlock Grid.Column="3"
                                           FontFamily="Consolas"
                                           FontSize="11"
                                           HorizontalAlignment="Center"
                                           Padding="0,2">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value=" "/>
                                            <Setter Property="Foreground" Value="{DynamicResource TextFillColorTertiaryBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Type}" Value="Added">
                                                    <Setter Property="Text" Value="+"/>
                                                    <Setter Property="Foreground" Value="{StaticResource AddedCountBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Type}" Value="Deleted">
                                                    <Setter Property="Text" Value="-"/>
                                                    <Setter Property="Foreground" Value="{StaticResource DeletedCountBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- Line text -->
                                <TextBlock Grid.Column="4"
                                           FontFamily="Consolas"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                           Text="{Binding Text}"
                                           Padding="4,2,8,2"
                                           TextTrimming="None"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            </Border>
        </Grid>
    </Border>
</UserControl>
