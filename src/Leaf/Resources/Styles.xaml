<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- NOTE: Fluent theme resource keys for text colors:
         - TreeViewItemForeground: for TreeView text
         - TextFillColorPrimaryBrush: for general text
         - TextFillColorSecondaryBrush: for secondary/dimmed text
         These automatically adapt to light/dark theme -->

    <!-- Fixed row height for commit list items -->
    <sys:Double x:Key="CommitRowHeight" xmlns:sys="clr-namespace:System;assembly=mscorlib">28</sys:Double>

    <!-- Graph canvas dimensions -->
    <sys:Double x:Key="LaneWidth" xmlns:sys="clr-namespace:System;assembly=mscorlib">20</sys:Double>
    <sys:Double x:Key="NodeRadius" xmlns:sys="clr-namespace:System;assembly=mscorlib">5</sys:Double>

    <!-- Commit List Item Style -->
    <Style x:Key="CommitListItemStyle" TargetType="Border">
        <Setter Property="Height" Value="{StaticResource CommitRowHeight}"/>
        <Setter Property="Padding" Value="8,0"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Repository List Item Style -->
    <Style x:Key="RepositoryItemStyle" TargetType="TreeViewItem">
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Margin" Value="0,1"/>
    </Style>

    <!-- Branch Badge Style -->
    <Style x:Key="BranchBadgeStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BranchBrush0}"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Padding" Value="6,2"/>
        <Setter Property="Margin" Value="4,0"/>
    </Style>

    <!-- Toolbar Button Style -->
    <Style x:Key="ToolbarButtonStyle" TargetType="Button">
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="MinWidth" Value="80"/>
    </Style>

    <!-- Status Bar Style -->
    <Style x:Key="StatusBarStyle" TargetType="StatusBar">
        <Setter Property="Padding" Value="8,4"/>
    </Style>

    <!-- Panel Header Style -->
    <Style x:Key="PanelHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="8,8,8,4"/>
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
    </Style>

    <!-- Commit Message Style -->
    <Style x:Key="CommitMessageStyle" TargetType="TextBlock">
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Commit SHA Style -->
    <Style x:Key="CommitShaStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Author Style -->
    <Style x:Key="AuthorStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="8,0"/>
    </Style>

    <!-- Date Style -->
    <Style x:Key="DateStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Width" Value="80"/>
    </Style>

    <!-- Diff Header Style -->
    <Style x:Key="DiffHeaderStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
    </Style>

    <!-- File Change Item Style -->
    <Style x:Key="FileChangeItemStyle" TargetType="TreeViewItem">
        <Setter Property="Padding" Value="4,2"/>
    </Style>

    <!-- Dirty Indicator Style -->
    <Style x:Key="DirtyIndicatorStyle" TargetType="Ellipse">
        <Setter Property="Width" Value="8"/>
        <Setter Property="Height" Value="8"/>
        <Setter Property="Fill" Value="#FFB900"/>
        <Setter Property="Margin" Value="4,0"/>
    </Style>

</ResourceDictionary>
